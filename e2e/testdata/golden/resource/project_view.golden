package views

import (
	"net/http"
	"testapp/internal/hypermedia"
	ui "testapp/internal/ui"
	"testapp/models"
	"testapp/router/routes"
)

templ ProjectIndex(projects []models.Project) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Projects</h1>
					@ui.Button(ui.ButtonProps{Label: "New Project"}).WithHref(routes.ProjectNew.URL()).Render()
				</div>
				if len(projects) == 0 {
					<p class="text-sm text-base-content/60">No projects found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								@ui.TableHead() {
									Name 
								}
								@ui.TableHead() {
									Description 
								}
								@ui.TableHead() {
									Created At 
								}
								@ui.TableHead() {
									Updated At 
								}
								@ui.TableHead() {
									Actions 
								}
							}
						}
						@ui.TableBody() {
							for _, project := range projects {
								@ui.TableRow() {
									@ui.TableCell() {
										{ project.Name }
									}
									@ui.TableCell() {
										{ project.Description }
									}
									@ui.TableCell() {
										{ project.CreatedAt.String() }
									}
									@ui.TableCell() {
										{ project.UpdatedAt.String() }
									}
									@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href={ routes.ProjectShow.URL(project.ID) }>View</a>
											<a class="text-base-content/80 hover:text-base-content" href={ routes.ProjectEdit.URL(project.ID) }>Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ ProjectShow(project models.Project) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Project Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref(routes.ProjectEdit.URL(project.ID)).Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ routes.ProjectIndex.URL() }>Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Name"}).Render()
								<p class="text-sm text-base-content">{ project.Name }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Description"}).Render()
								<p class="text-sm text-base-content">{ project.Description }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ project.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ project.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ ProjectNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New Project")
						@ui.CardDescription("Enter the details for the new project.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: routes.ProjectCreate.URL()}, ui.WithClass("space-y-5"), ui.WithFragment("new-project-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Description"}).WithFor("description").Render()
									@ui.Input("description").Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create Project"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ ProjectEdit(project models.Project) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit Project")
						@ui.CardDescription("Update the details for this project.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: routes.ProjectUpdate.URL(project.ID)}, ui.WithClass("space-y-5"), ui.WithFragment("edit-project-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").WithValue(project.Name).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Description"}).WithFor("description").Render()
									@ui.Input("description").WithValue(project.Description).Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update Project"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy Project"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", hypermedia.DataAction(http.MethodDelete, routes.ProjectDestroy.URL(project.ID))).Render()
					}
				}
			</div>
		</main>
	}
}
