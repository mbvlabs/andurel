package views

import (
	"net/http"
	"testapp/internal/hypermedia"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ ProjectIndex(projects []models.Project) {
	@base() {
		<main>
			<div>
				<h1>Projects</h1>
				<a href={ templ.URL(routes.ProjectNew.URL()) }>New Project</a>
			</div>
			<div>
				<div>
					if len(projects) == 0 {
						<p>No projects found.</p>
					} else {
						<div>
							<table>
								<thead>
									<tr>
										<th>Name</th>
										<th>Description</th>
										<th>Created At</th>
										<th>Updated At</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									for _, project := range projects {
										<tr>
											<td>{ project.Name }</td>
											<td>{ project.Description }</td>
											<td>{ project.CreatedAt.String() }</td>
											<td>{ project.UpdatedAt.String() }</td>
											<td>
												<a href={ templ.URL(routes.ProjectShow.URL(project.ID)) }>View</a>
												<a href={ templ.URL(routes.ProjectEdit.URL(project.ID)) }>Edit</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</main>
	}
}

templ ProjectShow(project models.Project) {
	@base() {
		<main>
			<div>
				<h1>Project Details</h1>
				<div>
					<a href={ templ.URL(routes.ProjectEdit.URL(project.ID)) }>Edit</a>
					<a href={ templ.URL(routes.ProjectIndex.URL()) }>Back to List</a>
				</div>
			</div>
			<div>
				<div>
					<div>
						<div>
							<label>Name</label>
							<p>{ project.Name }</p>
						</div>
						<div>
							<label>Description</label>
							<p>{ project.Description }</p>
						</div>
						<div>
							<label>Created At</label>
							<p>{ project.CreatedAt.String() }</p>
						</div>
						<div>
							<label>Updated At</label>
							<p>{ project.UpdatedAt.String() }</p>
						</div>
					</div>
				</div>
			</div>
		</main>
	}
}

templ ProjectNew() {
	@base() {
		<main>
			<div>
				<h1>New Project</h1>
				<a href={ templ.URL(routes.ProjectIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ hypermedia.DataAction(http.MethodPost, routes.ProjectCreate.URL()) }>
						<div>
							<div>
								<h2>Project Information</h2>
								<p>Enter the details for the new project.</p>
								<div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Description", "description", "text", "", false, components.FieldProp{})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ProjectIndex.URL()) }>Cancel</a>
							<button type="submit">Create Project</button>
						</div>
					</form>
				</div>
			</div>
		</main>
	}
}

templ ProjectEdit(project models.Project) {
	@base() {
		<main>
			<div>
				<h1>Edit Project</h1>
				<a href={ templ.URL(routes.ProjectIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ hypermedia.DataAction(http.MethodPut, routes.ProjectUpdate.URL(project.ID)) }>
						<div>
							<div>
								<h2>Project Information</h2>
								<p>Update the details for this project.</p>
								<div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{
											Value: project.Name,
										})
									</div>
									<div>
										@components.InputField("Description", "description", "text", "", false, components.FieldProp{
											Value: project.Description,
										})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ProjectIndex.URL()) }>Cancel</a>
							<button type="submit">Update Project</button>
						</div>
					</form>
					<div>
						<button
							data-on:click={ hypermedia.DataAction(http.MethodDelete, routes.ProjectDestroy.URL(project.ID)) }
						>Destroy Project</button>
					</div>
				</div>
			</div>
		</main>
	}
}
