package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type Project struct {
	db storage.Pool
}

func NewProject(db storage.Pool) Project {
	return Project{db}
}

func (p Project) Index(eCtx echo.Context) error {
	page := int64(1)
	if p := eCtx.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := eCtx.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	projectsList, err := models.PaginateProjects(
		eCtx.Request().Context(),
		p.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(eCtx, views.InternalError())
	}

	return render(eCtx, views.ProjectIndex(projectsList.Projects))
}

func (p Project) Show(eCtx echo.Context) error {
	projectID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	project, err := models.FindProject(eCtx.Request().Context(), p.db.Conn(), projectID)
	if err != nil {
		return render(eCtx, views.NotFound())
	}

	return render(eCtx, views.ProjectShow(project))
}

func (p Project) New(eCtx echo.Context) error {
	return render(eCtx, views.ProjectNew())
}

type CreateProjectFormPayload struct {
	Name        string `form:"name"`
	Description string `form:"description"`
}

func (p Project) Create(eCtx echo.Context) error {
	var payload CreateProjectFormPayload
	if err := eCtx.Bind(&payload); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"could not parse CreateProjectFormPayload",
			"error",
			err,
		)

		return render(eCtx, views.NotFound())
	}

	data := models.CreateProjectData{
		Name:        payload.Name,
		Description: payload.Description,
	}

	project, err := models.CreateProject(
		eCtx.Request().Context(),
		p.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to create project: %v", err)); flashErr != nil {
			return flashErr
		}
		return eCtx.Redirect(http.StatusSeeOther, routes.ProjectNew.URL())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Project created successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.ProjectShow.URL(project.ID))
}

func (p Project) Edit(eCtx echo.Context) error {
	projectID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	project, err := models.FindProject(eCtx.Request().Context(), p.db.Conn(), projectID)
	if err != nil {
		return render(eCtx, views.NotFound())
	}

	return render(eCtx, views.ProjectEdit(project))
}

type UpdateProjectFormPayload struct {
	Name        string `form:"name"`
	Description string `form:"description"`
}

func (p Project) Update(eCtx echo.Context) error {
	projectID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	var payload UpdateProjectFormPayload
	if err := eCtx.Bind(&payload); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"could not parse UpdateProjectFormPayload",
			"error",
			err,
		)

		return render(eCtx, views.NotFound())
	}

	data := models.UpdateProjectData{
		ID:          projectID,
		Name:        payload.Name,
		Description: payload.Description,
	}

	project, err := models.UpdateProject(
		eCtx.Request().Context(),
		p.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to update project: %v", err)); flashErr != nil {
			return render(eCtx, views.InternalError())
		}
		return eCtx.Redirect(
			http.StatusSeeOther,
			routes.ProjectEdit.URL(projectID),
		)
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Project updated successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.ProjectShow.URL(project.ID))
}

func (p Project) Destroy(eCtx echo.Context) error {
	projectID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	err = models.DestroyProject(eCtx.Request().Context(), p.db.Conn(), projectID)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to delete project: %v", err)); flashErr != nil {
			return render(eCtx, views.InternalError())
		}
		return eCtx.Redirect(http.StatusSeeOther, routes.ProjectIndex.URL())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Project destroyed successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.ProjectIndex.URL())
}
