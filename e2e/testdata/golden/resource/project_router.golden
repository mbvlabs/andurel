package router

import (
	"net/http"

	"testapp/controllers"
	"testapp/router/routes"

	"github.com/labstack/echo/v4"
)

func registerProjectRoutes(handler *echo.Echo, project controllers.Project) {
	handler.Add(
		http.MethodGet, routes.ProjectIndex.Path(), project.Index,
	).Name = routes.ProjectIndex.Name()

	handler.Add(
		http.MethodGet, routes.ProjectShow.Path(), project.Show,
	).Name = routes.ProjectShow.Name()

	handler.Add(
		http.MethodGet, routes.ProjectNew.Path(), project.New,
	).Name = routes.ProjectNew.Name()

	handler.Add(
		http.MethodPost, routes.ProjectCreate.Path(), project.Create,
	).Name = routes.ProjectCreate.Name()

	handler.Add(
		http.MethodGet, routes.ProjectEdit.Path(), project.Edit,
	).Name = routes.ProjectEdit.Name()

	handler.Add(
		http.MethodPut, routes.ProjectUpdate.Path(), project.Update,
	).Name = routes.ProjectUpdate.Name()

	handler.Add(
		http.MethodDelete, routes.ProjectDestroy.Path(), project.Destroy,
	).Name = routes.ProjectDestroy.Name()
}
