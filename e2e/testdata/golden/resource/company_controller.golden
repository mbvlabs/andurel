type UpdateCompaniesFormPayload struct {
	Name     string `form:"name"`
	Industry string `form:"industry"`
}

func (c Companies) Update(etx echo.Context) error {
	companyID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	var payload UpdateCompaniesFormPayload
	if err := etx.Bind(&payload); err != nil {
		slog.ErrorContext(
			etx.Request().Context(),
			"could not parse UpdateCompaniesFormPayload",
			"error",
			err,
		)

		return render(etx, views.NotFound())
	}

	data := models.UpdateCompaniesData{
		ID:       companyID,
		Name:     payload.Name,
		Industry: payload.Industry,
	}

	company, err := models.UpdateCompanies(
		etx.Request().Context(),
		c.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to update company: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(
			http.StatusSeeOther,
			routes.CompaniesEdit.URL(companyID),
		)
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Companies updated successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.CompaniesShow.URL(company.ID))
}

func (c Companies) Destroy(etx echo.Context) error {
	companyID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	err = models.DestroyCompanies(etx.Request().Context(), c.db.Conn(), companyID)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to delete company: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(http.StatusSeeOther, routes.CompaniesIndex.URL())
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Companies destroyed successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.CompaniesIndex.URL())
}
