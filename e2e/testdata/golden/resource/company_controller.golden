package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type Company struct {
	db storage.Pool
}

func NewCompany(db storage.Pool) Company {
	return Company{db}
}

func (c Company) Index(eCtx echo.Context) error {
	page := int64(1)
	if p := eCtx.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := eCtx.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	companiesList, err := models.PaginateCompanies(
		eCtx.Request().Context(),
		c.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(eCtx, views.InternalError())
	}

	return render(eCtx, views.CompanyIndex(companiesList.Companies))
}

func (c Company) Show(eCtx echo.Context) error {
	companyID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	company, err := models.FindCompany(eCtx.Request().Context(), c.db.Conn(), companyID)
	if err != nil {
		return render(eCtx, views.NotFound())
	}

	return render(eCtx, views.CompanyShow(company))
}

func (c Company) New(eCtx echo.Context) error {
	return render(eCtx, views.CompanyNew())
}

type CreateCompanyFormPayload struct {
	Name     string `form:"name"`
	Industry string `form:"industry"`
}

func (c Company) Create(eCtx echo.Context) error {
	var payload CreateCompanyFormPayload
	if err := eCtx.Bind(&payload); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"could not parse CreateCompanyFormPayload",
			"error",
			err,
		)

		return render(eCtx, views.NotFound())
	}

	data := models.CreateCompanyData{
		Name:     payload.Name,
		Industry: payload.Industry,
	}

	company, err := models.CreateCompany(
		eCtx.Request().Context(),
		c.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to create company: %v", err)); flashErr != nil {
			return flashErr
		}
		return eCtx.Redirect(http.StatusSeeOther, routes.CompanyNew.URL())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Company created successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.CompanyShow.URL(company.ID))
}

func (c Company) Edit(eCtx echo.Context) error {
	companyID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	company, err := models.FindCompany(eCtx.Request().Context(), c.db.Conn(), companyID)
	if err != nil {
		return render(eCtx, views.NotFound())
	}

	return render(eCtx, views.CompanyEdit(company))
}

type UpdateCompanyFormPayload struct {
	Name     string `form:"name"`
	Industry string `form:"industry"`
}

func (c Company) Update(eCtx echo.Context) error {
	companyID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	var payload UpdateCompanyFormPayload
	if err := eCtx.Bind(&payload); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"could not parse UpdateCompanyFormPayload",
			"error",
			err,
		)

		return render(eCtx, views.NotFound())
	}

	data := models.UpdateCompanyData{
		ID:       companyID,
		Name:     payload.Name,
		Industry: payload.Industry,
	}

	company, err := models.UpdateCompany(
		eCtx.Request().Context(),
		c.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to update company: %v", err)); flashErr != nil {
			return render(eCtx, views.InternalError())
		}
		return eCtx.Redirect(
			http.StatusSeeOther,
			routes.CompanyEdit.URL(companyID),
		)
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Company updated successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.CompanyShow.URL(company.ID))
}

func (c Company) Destroy(eCtx echo.Context) error {
	companyID, err := uuid.Parse(eCtx.Param("id"))
	if err != nil {
		return render(eCtx, views.BadRequest())
	}

	err = models.DestroyCompany(eCtx.Request().Context(), c.db.Conn(), companyID)
	if err != nil {
		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, fmt.Sprintf("Failed to delete company: %v", err)); flashErr != nil {
			return render(eCtx, views.InternalError())
		}
		return eCtx.Redirect(http.StatusSeeOther, routes.CompanyIndex.URL())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Company destroyed successfully"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.CompanyIndex.URL())
}
