package router

import (
	"net/http"

	"testapp/controllers"
	"testapp/router/routes"

	"github.com/labstack/echo/v4"
)

func registerCompanyRoutes(handler *echo.Echo, company controllers.Company) {
	handler.Add(
		http.MethodGet, routes.CompanyIndex.Path(), company.Index,
	).Name = routes.CompanyIndex.Name()

	handler.Add(
		http.MethodGet, routes.CompanyShow.Path(), company.Show,
	).Name = routes.CompanyShow.Name()

	handler.Add(
		http.MethodGet, routes.CompanyNew.Path(), company.New,
	).Name = routes.CompanyNew.Name()

	handler.Add(
		http.MethodPost, routes.CompanyCreate.Path(), company.Create,
	).Name = routes.CompanyCreate.Name()

	handler.Add(
		http.MethodGet, routes.CompanyEdit.Path(), company.Edit,
	).Name = routes.CompanyEdit.Name()

	handler.Add(
		http.MethodPut, routes.CompanyUpdate.Path(), company.Update,
	).Name = routes.CompanyUpdate.Name()

	handler.Add(
		http.MethodDelete, routes.CompanyDestroy.Path(), company.Destroy,
	).Name = routes.CompanyDestroy.Name()
}
