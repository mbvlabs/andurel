package views

import (
	"net/http"
	"testapp/internal/hypermedia"
	ui "testapp/internal/ui"
	"testapp/models"
	"testapp/router/routes"
)

templ CompanyIndex(companies []models.Company) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Companies</h1>
					@ui.Button(ui.ButtonProps{Label: "New Company"}).WithHref(routes.CompanyNew.URL()).Render()
				</div>
				if len(companies) == 0 {
					<p class="text-sm text-base-content/60">No companies found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								@ui.TableHead() {
									Name 
								}
								@ui.TableHead() {
									Industry 
								}
								@ui.TableHead() {
									Created At 
								}
								@ui.TableHead() {
									Updated At 
								}
								@ui.TableHead() {
									Actions 
								}
							}
						}
						@ui.TableBody() {
							for _, company := range companies {
								@ui.TableRow() {
									@ui.TableCell() {
										{ company.Name }
									}
									@ui.TableCell() {
										{ company.Industry }
									}
									@ui.TableCell() {
										{ company.CreatedAt.String() }
									}
									@ui.TableCell() {
										{ company.UpdatedAt.String() }
									}
									@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href={ routes.CompanyShow.URL(company.ID) }>View</a>
											<a class="text-base-content/80 hover:text-base-content" href={ routes.CompanyEdit.URL(company.ID) }>Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ CompanyShow(company models.Company) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Company Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref(routes.CompanyEdit.URL(company.ID)).Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ routes.CompanyIndex.URL() }>Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Name"}).Render()
								<p class="text-sm text-base-content">{ company.Name }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Industry"}).Render()
								<p class="text-sm text-base-content">{ company.Industry }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ company.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ company.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ CompanyNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New Company")
						@ui.CardDescription("Enter the details for the new company.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: routes.CompanyCreate.URL()}, ui.WithClass("space-y-5"), ui.WithFragment("new-company-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Industry"}).WithFor("industry").Render()
									@ui.Input("industry").Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create Company"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ CompanyEdit(company models.Company) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit Company")
						@ui.CardDescription("Update the details for this company.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: routes.CompanyUpdate.URL(company.ID)}, ui.WithClass("space-y-5"), ui.WithFragment("edit-company-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").WithValue(company.Name).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Industry"}).WithFor("industry").Render()
									@ui.Input("industry").WithValue(company.Industry).Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update Company"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy Company"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", hypermedia.DataAction(http.MethodDelete, routes.CompanyDestroy.URL(company.ID))).Render()
					}
				}
			</div>
		</main>
	}
}
