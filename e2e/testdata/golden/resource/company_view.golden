package views

import (
	"net/http"
	"testapp/internal/hypermedia"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ CompanyIndex(companies []models.Company) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Companies</h1>
					<a class="inline-flex items-center rounded-field bg-primary px-4 py-2 text-sm font-semibold text-primary-content transition hover:bg-primary/90" href={ templ.URL(routes.CompanyNew.URL()) }>New Company</a>
				</div>
				<div class="rounded-box border border-base-300 bg-base-100 p-6 shadow-lg">
					if len(companies) == 0 {
						<p class="text-sm text-base-content/60">No companies found.</p>
					} else {
						<div class="overflow-x-auto">
							<table class="w-full text-left text-sm">
								<thead class="border-b border-base-300 text-xs uppercase tracking-wide text-base-content/60">
									<tr>
										<th class="pb-3 pr-4">Name</th>
										<th class="pb-3 pr-4">Industry</th>
										<th class="pb-3 pr-4">Created At</th>
										<th class="pb-3 pr-4">Updated At</th>
										<th class="pb-3 pr-4">Actions</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-base-300">
									for _, company := range companies {
										<tr class="align-top">
											<td class="py-3 pr-4 text-base-content/70">{ company.Name }</td>
											<td class="py-3 pr-4 text-base-content/70">{ company.Industry }</td>
											<td class="py-3 pr-4 text-base-content/70">{ company.CreatedAt.String() }</td>
											<td class="py-3 pr-4 text-base-content/70">{ company.UpdatedAt.String() }</td>
											<td class="py-3 pr-4">
												<div class="flex flex-wrap gap-3 text-sm">
													<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.CompanyShow.URL(company.ID)) }>View</a>
													<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.CompanyEdit.URL(company.ID)) }>Edit</a>
												</div>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</main>
	}
}

templ CompanyShow(company models.Company) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Company Details</h1>
					<div class="flex flex-wrap gap-3">
						<a class="inline-flex items-center rounded-field bg-primary px-4 py-2 text-sm font-semibold text-primary-content transition hover:bg-primary/90" href={ templ.URL(routes.CompanyEdit.URL(company.ID)) }>Edit</a>
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ templ.URL(routes.CompanyIndex.URL()) }>Back to List</a>
					</div>
				</div>
				<div class="rounded-box border border-base-300 bg-base-100 p-6 shadow-lg">
					<div class="grid gap-5 sm:grid-cols-2">
						<div class="space-y-1">
							<label class="text-xs uppercase tracking-wide text-base-content/60">Name</label>
							<p class="text-sm text-base-content">{ company.Name }</p>
						</div>
						<div class="space-y-1">
							<label class="text-xs uppercase tracking-wide text-base-content/60">Industry</label>
							<p class="text-sm text-base-content">{ company.Industry }</p>
						</div>
						<div class="space-y-1">
							<label class="text-xs uppercase tracking-wide text-base-content/60">Created At</label>
							<p class="text-sm text-base-content">{ company.CreatedAt.String() }</p>
						</div>
						<div class="space-y-1">
							<label class="text-xs uppercase tracking-wide text-base-content/60">Updated At</label>
							<p class="text-sm text-base-content">{ company.UpdatedAt.String() }</p>
						</div>
					</div>
				</div>
			</div>
		</main>
	}
}

templ CompanyNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				<div class="rounded-box border border-base-300 bg-base-100 p-8 shadow-lg">
					<form
						class="space-y-5"
						data-indicator:submitting
						data-on:submit={ "!$submitting &&" + hypermedia.DataAction(http.MethodPost, routes.CompanyCreate.URL()) }
					>
						<div class="space-y-1">
							<h2 class="text-xl font-semibold text-base-content">New Company</h2>
							<p class="text-sm text-base-content/60">Enter the details for the new company.</p>
						</div>
						<div class="space-y-4">
							@components.InputField("Name", "name", "text", "", false, components.FieldProp{})
							@components.InputField("Industry", "industry", "text", "", false, components.FieldProp{})
						</div>
						<button class="w-full inline-flex items-center justify-center rounded-field bg-primary px-5 py-2.5 text-sm font-semibold text-primary-content transition hover:bg-primary/90" type="submit">Create Company</button>
						<p class="text-center text-sm text-base-content/60">
							<a class="text-base-content/70 hover:text-base-content" href={ templ.URL(routes.CompanyIndex.URL()) }>Back to List</a>
						</p>
					</form>
				</div>
			</div>
		</main>
	}
}

templ CompanyEdit(company models.Company) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				<div class="rounded-box border border-base-300 bg-base-100 p-8 shadow-lg">
					<form
						class="space-y-5"
						data-indicator:submitting
						data-on:submit={ "!$submitting &&" + hypermedia.DataAction(http.MethodPut, routes.CompanyUpdate.URL(company.ID)) }
					>
						<div class="space-y-1">
							<h2 class="text-xl font-semibold text-base-content">Edit Company</h2>
							<p class="text-sm text-base-content/60">Update the details for this company.</p>
						</div>
						<div class="space-y-4">
							@components.InputField("Name", "name", "text", "", false, components.FieldProp{
								Value: company.Name,
							})
							@components.InputField("Industry", "industry", "text", "", false, components.FieldProp{
								Value: company.Industry,
							})
						</div>
						<button class="w-full inline-flex items-center justify-center rounded-field bg-primary px-5 py-2.5 text-sm font-semibold text-primary-content transition hover:bg-primary/90" type="submit">Update Company</button>
						<p class="text-center text-sm text-base-content/60">
							<a class="text-base-content/70 hover:text-base-content" href={ templ.URL(routes.CompanyIndex.URL()) }>Back to List</a>
						</p>
					</form>
					<div class="mt-4 pt-4 border-t border-base-300">
						<button
							class="w-full inline-flex items-center justify-center rounded-field border border-error/60 px-4 py-2.5 text-sm font-semibold text-error transition hover:border-error hover:bg-error/10"
							data-on:click={ hypermedia.DataAction(http.MethodDelete, routes.CompanyDestroy.URL(company.ID)) }
						>Destroy Company</button>
					</div>
				</div>
			</div>
		</main>
	}
}
