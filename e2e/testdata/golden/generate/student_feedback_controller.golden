package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type StudentFeedback struct {
	db storage.Pool
}

func NewStudentFeedback(db storage.Pool) StudentFeedback {
	return StudentFeedback{db}
}

func (sf StudentFeedback) Index(c echo.Context) error {
	page := int64(1)
	if p := c.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := c.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	studentFeedbackList, err := models.PaginateStudentFeedback(
		c.Request().Context(),
		sf.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(c, views.InternalError())
	}

	return render(c, views.StudentFeedbackIndex(studentFeedbackList.StudentFeedback))
}

func (sf StudentFeedback) Show(c echo.Context) error {
	studentFeedbackID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	studentFeedback, err := models.FindStudentFeedback(c.Request().Context(), sf.db.Conn(), studentFeedbackID)
	if err != nil {
		return render(c, views.NotFound())
	}

	return render(c, views.StudentFeedbackShow(studentFeedback))
}

func (sf StudentFeedback) New(c echo.Context) error {
	return render(c, views.StudentFeedbackNew())
}

type CreateStudentFeedbackFormPayload struct {
	StudentID string `form:"student_id"`
	Feedback  string `form:"feedback"`
	Rating    int32  `form:"rating"`
}

func (sf StudentFeedback) Create(c echo.Context) error {
	var payload CreateStudentFeedbackFormPayload
	if err := c.Bind(&payload); err != nil {
		slog.ErrorContext(
			c.Request().Context(),
			"could not parse CreateStudentFeedbackFormPayload",
			"error",
			err,
		)

		return render(c, views.NotFound())
	}

	data := models.CreateStudentFeedbackData{
		StudentID: payload.StudentID,
		Feedback:  payload.Feedback,
		Rating:    payload.Rating,
	}

	studentFeedback, err := models.CreateStudentFeedback(
		c.Request().Context(),
		sf.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to create studentFeedback: %v", err)); flashErr != nil {
			return flashErr
		}
		return c.Redirect(http.StatusSeeOther, routes.StudentFeedbackNew.URL())
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "StudentFeedback created successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.StudentFeedbackShow.URL(studentFeedback.ID))
}

func (sf StudentFeedback) Edit(c echo.Context) error {
	studentFeedbackID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	studentFeedback, err := models.FindStudentFeedback(c.Request().Context(), sf.db.Conn(), studentFeedbackID)
	if err != nil {
		return render(c, views.NotFound())
	}

	return render(c, views.StudentFeedbackEdit(studentFeedback))
}

type UpdateStudentFeedbackFormPayload struct {
	StudentID string `form:"student_id"`
	Feedback  string `form:"feedback"`
	Rating    int32  `form:"rating"`
}

func (sf StudentFeedback) Update(c echo.Context) error {
	studentFeedbackID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	var payload UpdateStudentFeedbackFormPayload
	if err := c.Bind(&payload); err != nil {
		slog.ErrorContext(
			c.Request().Context(),
			"could not parse UpdateStudentFeedbackFormPayload",
			"error",
			err,
		)

		return render(c, views.NotFound())
	}

	data := models.UpdateStudentFeedbackData{
		ID:        studentFeedbackID,
		StudentID: payload.StudentID,
		Feedback:  payload.Feedback,
		Rating:    payload.Rating,
	}

	studentFeedback, err := models.UpdateStudentFeedback(
		c.Request().Context(),
		sf.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to update studentFeedback: %v", err)); flashErr != nil {
			return render(c, views.InternalError())
		}
		return c.Redirect(
			http.StatusSeeOther,
			routes.StudentFeedbackEdit.URL(studentFeedbackID),
		)
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "StudentFeedback updated successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.StudentFeedbackShow.URL(studentFeedback.ID))
}

func (sf StudentFeedback) Destroy(c echo.Context) error {
	studentFeedbackID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	err = models.DestroyStudentFeedback(c.Request().Context(), sf.db.Conn(), studentFeedbackID)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to delete studentFeedback: %v", err)); flashErr != nil {
			return render(c, views.InternalError())
		}
		return c.Redirect(http.StatusSeeOther, routes.StudentFeedbackIndex.URL())
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "StudentFeedback destroyed successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.StudentFeedbackIndex.URL())
}
