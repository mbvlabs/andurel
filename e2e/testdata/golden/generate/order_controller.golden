package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type Orders struct {
	db storage.Pool
}

func NewOrders(db storage.Pool) Orders {
	return Orders{db}
}

func (o Orders) Index(etx echo.Context) error {
	page := int64(1)
	if p := etx.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := etx.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	ordersList, err := models.PaginateOrderss(
		etx.Request().Context(),
		o.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(etx, views.InternalError())
	}

	return render(etx, views.OrderIndex(ordersList.Orderss))
}

func (o Orders) Show(etx echo.Context) error {
	orderID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	order, err := models.FindOrders(etx.Request().Context(), o.db.Conn(), orderID)
	if err != nil {
		return render(etx, views.NotFound())
	}

	return render(etx, views.OrderShow(order))
}

func (o Orders) New(etx echo.Context) error {
	return render(etx, views.OrderNew())
}

type CreateOrdersFormPayload struct {
	CustomerName string  `form:"customer_name"`
	Total        float64 `form:"total"`
}

func (o Orders) Create(etx echo.Context) error {
	var payload CreateOrdersFormPayload
	if err := etx.Bind(&payload); err != nil {
		slog.ErrorContext(
			etx.Request().Context(),
			"could not parse CreateOrdersFormPayload",
			"error",
			err,
		)

		return render(etx, views.NotFound())
	}

	data := models.CreateOrdersData{
		CustomerName: payload.CustomerName,
		Total:        payload.Total,
	}

	order, err := models.CreateOrders(
		etx.Request().Context(),
		o.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to create order: %v", err)); flashErr != nil {
			return flashErr
		}
		return etx.Redirect(http.StatusSeeOther, routes.OrdersNew.URL())
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Orders created successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.OrdersShow.URL(order.ID))
}

func (o Orders) Edit(etx echo.Context) error {
	orderID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	order, err := models.FindOrders(etx.Request().Context(), o.db.Conn(), orderID)
	if err != nil {
		return render(etx, views.NotFound())
	}

	return render(etx, views.OrderEdit(order))
}

type UpdateOrdersFormPayload struct {
	CustomerName string  `form:"customer_name"`
	Total        float64 `form:"total"`
}

func (o Orders) Update(etx echo.Context) error {
	orderID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	var payload UpdateOrdersFormPayload
	if err := etx.Bind(&payload); err != nil {
		slog.ErrorContext(
			etx.Request().Context(),
			"could not parse UpdateOrdersFormPayload",
			"error",
			err,
		)

		return render(etx, views.NotFound())
	}

	data := models.UpdateOrdersData{
		ID:           orderID,
		CustomerName: payload.CustomerName,
		Total:        payload.Total,
	}

	order, err := models.UpdateOrders(
		etx.Request().Context(),
		o.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to update order: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(
			http.StatusSeeOther,
			routes.OrdersEdit.URL(orderID),
		)
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Orders updated successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.OrdersShow.URL(order.ID))
}

func (o Orders) Destroy(etx echo.Context) error {
	orderID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	err = models.DestroyOrders(etx.Request().Context(), o.db.Conn(), orderID)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to delete order: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(http.StatusSeeOther, routes.OrdersIndex.URL())
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Orders destroyed successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.OrdersIndex.URL())
}
