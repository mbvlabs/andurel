package views

import (
	"fmt"
	"net/http"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ ReviewIndex(reviews []models.Review) {
	@base() {
		<main>
			<div>
				<h1>Reviews</h1>
				<a href={ templ.URL(routes.ReviewNew.URL()) }>New Review</a>
			</div>
			<div>
				<div>
					if len(reviews) == 0 {
						<p>No reviews found.</p>
					} else {
						<div>
							<table>
								<thead>
									<tr>
										<th>Title</th>
										<th>Body</th>
										<th>Rating</th>
										<th>Created At</th>
										<th>Updated At</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									for _, review := range reviews {
										<tr>
											<td>{ review.Title }</td>
											<td>{ review.Body }</td>
											<td>{ fmt.Sprintf("%d", review.Rating) }</td>
											<td>{ review.CreatedAt.String() }</td>
											<td>{ review.UpdatedAt.String() }</td>
											<td>
												<a href={ templ.URL(routes.ReviewShow.URL(review.ID)) }>View</a>
												<a href={ templ.URL(routes.ReviewEdit.URL(review.ID)) }>Edit</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</main>
	}
}

templ ReviewShow(review models.Review) {
	@base() {
		<main>
			<div>
				<h1>Review Details</h1>
				<div>
					<a href={ templ.URL(routes.ReviewEdit.URL(review.ID)) }>Edit</a>
					<a href={ templ.URL(routes.ReviewIndex.URL()) }>Back to List</a>
				</div>
			</div>
			<div>
				<div>
					<div>
						<div>
							<label>Title</label>
							<p>{ review.Title }</p>
						</div>
						<div>
							<label>Body</label>
							<p>{ review.Body }</p>
						</div>
						<div>
							<label>Rating</label>
							<p>{ fmt.Sprintf("%d", review.Rating) }</p>
						</div>
						<div>
							<label>Created At</label>
							<p>{ review.CreatedAt.String() }</p>
						</div>
						<div>
							<label>Updated At</label>
							<p>{ review.UpdatedAt.String() }</p>
						</div>
					</div>
				</div>
			</div>
		</main>
	}
}

templ ReviewNew() {
	@base() {
		<main>
			<div>
				<h1>New Review</h1>
				<a href={ templ.URL(routes.ReviewIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ DataAction(http.MethodPost, routes.ReviewCreate.URL(), ActionTypeForm) }>
						<div>
							<div>
								<h2>Review Information</h2>
								<p>Enter the details for the new review.</p>
								<div>
									<div>
										@components.InputField("Title", "title", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Body", "body", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Rating", "rating", "number", "", false, components.FieldProp{})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ReviewIndex.URL()) }>Cancel</a>
							<button type="submit">Create Review</button>
						</div>
					</form>
				</div>
			</div>
		</main>
	}
}

templ ReviewEdit(review models.Review) {
	@base() {
		<main>
			<div>
				<h1>Edit Review</h1>
				<a href={ templ.URL(routes.ReviewIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ DataAction(http.MethodPut, routes.ReviewUpdate.URL(review.ID), ActionTypeForm) }>
						<div>
							<div>
								<h2>Review Information</h2>
								<p>Update the details for this review.</p>
								<div>
									<div>
										@components.InputField("Title", "title", "text", "", false, components.FieldProp{
											Value: review.Title,
										})
									</div>
									<div>
										@components.InputField("Body", "body", "text", "", false, components.FieldProp{
											Value: review.Body,
										})
									</div>
									<div>
										@components.InputField("Rating", "rating", "number", "", false, components.FieldProp{
											Value: fmt.Sprintf("%d", review.Rating),
										})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ReviewIndex.URL()) }>Cancel</a>
							<button type="submit">Update Review</button>
						</div>
					</form>
					<div>
						<button
							data-on:click={ DataAction(http.MethodDelete, routes.ReviewDestroy.URL(review.ID)) }
						>Destroy Review</button>
					</div>
				</div>
			</div>
		</main>
	}
}
