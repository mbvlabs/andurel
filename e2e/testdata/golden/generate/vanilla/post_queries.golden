-- name: QueryPostByID :one
select * from posts where id=$1;

-- name: QueryPosts :many
select * from posts;

-- name: InsertPost :one
insert into
    posts (id, title, tags, scores, settings, metadata, created_at, updated_at)
values
    ($1, $2, $3, $4, $5, $6, now(), now())
returning *;

-- name: UpdatePost :one
update posts
    set title=$2, tags=$3, scores=$4, settings=$5, metadata=$6, updated_at=now()
where id = $1
returning *;

-- name: DeletePost :exec
delete from posts where id=$1;

-- name: QueryPaginatedPosts :many
select * from posts
order by created_at desc
limit sqlc.arg('limit')::bigint offset sqlc.arg('offset')::bigint;

-- name: CountPosts :one
select count(*) from posts;

-- name: UpsertPost :one
insert into
    posts (id, title, tags, scores, settings, metadata, created_at, updated_at)
values
    ($1, $2, $3, $4, $5, $6, now(), now())
on conflict (id) do update set title=excluded.title, tags=excluded.tags, scores=excluded.scores, settings=excluded.settings, metadata=excluded.metadata, updated_at=now()
returning *;
