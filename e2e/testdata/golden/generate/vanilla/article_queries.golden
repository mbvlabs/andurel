-- name: QueryArticleByID :one
select * from articles where id=$1;

-- name: QueryArticles :many
select * from articles;

-- name: InsertArticle :one
insert into
    articles (id, title, content, published, created_at, updated_at)
values
    ($1, $2, $3, $4, now(), now())
returning *;

-- name: UpdateArticle :one
update articles
    set title=$2, content=$3, published=$4, updated_at=now()
where id = $1
returning *;

-- name: DeleteArticle :exec
delete from articles where id=$1;

-- name: QueryPaginatedArticles :many
select * from articles
order by created_at desc
limit sqlc.arg('limit')::bigint offset sqlc.arg('offset')::bigint;

-- name: CountArticles :one
select count(*) from articles;

-- name: UpsertArticle :one
insert into
    articles (id, title, content, published, created_at, updated_at)
values
    ($1, $2, $3, $4, now(), now())
on conflict (id) do update set title=excluded.title, content=excluded.content, published=excluded.published, updated_at=now()
returning *;
