package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type Items struct {
	db storage.Pool
}

func NewItems(db storage.Pool) Items {
	return Items{db}
}

func (i Items) Index(etx echo.Context) error {
	page := int64(1)
	if p := etx.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := etx.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	itemsList, err := models.PaginateItemss(
		etx.Request().Context(),
		i.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(etx, views.InternalError())
	}

	return render(etx, views.ItemsIndex(itemsList.Itemss))
}

func (i Items) Show(etx echo.Context) error {
	itemID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	item, err := models.FindItems(etx.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		return render(etx, views.NotFound())
	}

	return render(etx, views.ItemsShow(item))
}

func (i Items) New(etx echo.Context) error {
	return render(etx, views.ItemsNew())
}

type CreateItemsFormPayload struct {
	Name     string `form:"name"`
	Quantity int32  `form:"quantity"`
}

func (i Items) Create(etx echo.Context) error {
	var payload CreateItemsFormPayload
	if err := etx.Bind(&payload); err != nil {
		slog.ErrorContext(
			etx.Request().Context(),
			"could not parse CreateItemsFormPayload",
			"error",
			err,
		)

		return render(etx, views.NotFound())
	}

	data := models.CreateItemsData{
		Name:     payload.Name,
		Quantity: payload.Quantity,
	}

	item, err := models.CreateItems(
		etx.Request().Context(),
		i.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to create item: %v", err)); flashErr != nil {
			return flashErr
		}
		return etx.Redirect(http.StatusSeeOther, routes.ItemsNew.URL())
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Items created successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.ItemsShow.URL(item.ID))
}

func (i Items) Edit(etx echo.Context) error {
	itemID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	item, err := models.FindItems(etx.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		return render(etx, views.NotFound())
	}

	return render(etx, views.ItemsEdit(item))
}

type UpdateItemsFormPayload struct {
	Name     string `form:"name"`
	Quantity int32  `form:"quantity"`
}

func (i Items) Update(etx echo.Context) error {
	itemID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	var payload UpdateItemsFormPayload
	if err := etx.Bind(&payload); err != nil {
		slog.ErrorContext(
			etx.Request().Context(),
			"could not parse UpdateItemsFormPayload",
			"error",
			err,
		)

		return render(etx, views.NotFound())
	}

	data := models.UpdateItemsData{
		ID:       itemID,
		Name:     payload.Name,
		Quantity: payload.Quantity,
	}

	item, err := models.UpdateItems(
		etx.Request().Context(),
		i.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to update item: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(
			http.StatusSeeOther,
			routes.ItemsEdit.URL(itemID),
		)
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Items updated successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.ItemsShow.URL(item.ID))
}

func (i Items) Destroy(etx echo.Context) error {
	itemID, err := uuid.Parse(etx.Param("id"))
	if err != nil {
		return render(etx, views.BadRequest())
	}

	err = models.DestroyItems(etx.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		if flashErr := cookies.AddFlash(etx, cookies.FlashError, fmt.Sprintf("Failed to delete item: %v", err)); flashErr != nil {
			return render(etx, views.InternalError())
		}
		return etx.Redirect(http.StatusSeeOther, routes.ItemsIndex.URL())
	}

	if flashErr := cookies.AddFlash(etx, cookies.FlashSuccess, "Items destroyed successfully"); flashErr != nil {
		return render(etx, views.InternalError())
	}

	return etx.Redirect(http.StatusSeeOther, routes.ItemsIndex.URL())
}
