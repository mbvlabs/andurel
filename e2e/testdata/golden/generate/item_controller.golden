package controllers

import (
	"fmt"
	"log/slog"
	"net/http"
	"strconv"

	"testapp/internal/storage"
	"testapp/models"
	"testapp/router/cookies"
	"testapp/router/routes"
	"testapp/views"

	"github.com/google/uuid"
	"github.com/labstack/echo/v4"
)

type Item struct {
	db storage.Pool
}

func NewItem(db storage.Pool) Item {
	return Item{db}
}

func (i Item) Index(c echo.Context) error {
	page := int64(1)
	if p := c.QueryParam("page"); p != "" {
		if parsed, err := strconv.Atoi(p); err == nil && parsed > 0 {
			page = int64(parsed)
		}
	}

	perPage := int64(25)
	if pp := c.QueryParam("per_page"); pp != "" {
		if parsed, err := strconv.Atoi(pp); err == nil && parsed > 0 &&
			parsed <= 100 {
			perPage = int64(parsed)
		}
	}

	itemsList, err := models.PaginateItems(
		c.Request().Context(),
		i.db.Conn(),
		page,
		perPage,
	)
	if err != nil {
		return render(c, views.InternalError())
	}

	return render(c, views.ItemIndex(itemsList.Items))
}

func (i Item) Show(c echo.Context) error {
	itemID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	item, err := models.FindItem(c.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		return render(c, views.NotFound())
	}

	return render(c, views.ItemShow(item))
}

func (i Item) New(c echo.Context) error {
	return render(c, views.ItemNew())
}

type CreateItemFormPayload struct {
	Name     string `form:"name"`
	Quantity int32  `form:"quantity"`
}

func (i Item) Create(c echo.Context) error {
	var payload CreateItemFormPayload
	if err := c.Bind(&payload); err != nil {
		slog.ErrorContext(
			c.Request().Context(),
			"could not parse CreateItemFormPayload",
			"error",
			err,
		)

		return render(c, views.NotFound())
	}

	data := models.CreateItemData{
		Name:     payload.Name,
		Quantity: payload.Quantity,
	}

	item, err := models.CreateItem(
		c.Request().Context(),
		i.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to create item: %v", err)); flashErr != nil {
			return flashErr
		}
		return c.Redirect(http.StatusSeeOther, routes.ItemNew.URL())
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "Item created successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.ItemShow.URL(item.ID))
}

func (i Item) Edit(c echo.Context) error {
	itemID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	item, err := models.FindItem(c.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		return render(c, views.NotFound())
	}

	return render(c, views.ItemEdit(item))
}

type UpdateItemFormPayload struct {
	Name     string `form:"name"`
	Quantity int32  `form:"quantity"`
}

func (i Item) Update(c echo.Context) error {
	itemID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	var payload UpdateItemFormPayload
	if err := c.Bind(&payload); err != nil {
		slog.ErrorContext(
			c.Request().Context(),
			"could not parse UpdateItemFormPayload",
			"error",
			err,
		)

		return render(c, views.NotFound())
	}

	data := models.UpdateItemData{
		ID:       itemID,
		Name:     payload.Name,
		Quantity: payload.Quantity,
	}

	item, err := models.UpdateItem(
		c.Request().Context(),
		i.db.Conn(),
		data,
	)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to update item: %v", err)); flashErr != nil {
			return render(c, views.InternalError())
		}
		return c.Redirect(
			http.StatusSeeOther,
			routes.ItemEdit.URL(itemID),
		)
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "Item updated successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.ItemShow.URL(item.ID))
}

func (i Item) Destroy(c echo.Context) error {
	itemID, err := uuid.Parse(c.Param("id"))
	if err != nil {
		return render(c, views.BadRequest())
	}

	err = models.DestroyItem(c.Request().Context(), i.db.Conn(), itemID)
	if err != nil {
		if flashErr := cookies.AddFlash(c, cookies.FlashError, fmt.Sprintf("Failed to delete item: %v", err)); flashErr != nil {
			return render(c, views.InternalError())
		}
		return c.Redirect(http.StatusSeeOther, routes.ItemIndex.URL())
	}

	if flashErr := cookies.AddFlash(c, cookies.FlashSuccess, "Item destroyed successfully"); flashErr != nil {
		return render(c, views.InternalError())
	}

	return c.Redirect(http.StatusSeeOther, routes.ItemIndex.URL())
}
