package views

import (
	"fmt"
	"net/http"
	ui "testapp/internal/ui"
	"testapp/models"
)

templ CategoryIndex(categories []models.Category) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Categories</h1>
					@ui.Button(ui.ButtonProps{Label: "New Category"}).WithHref("/").Render()
				</div>
				if len(categories) == 0 {
					<p class="text-sm text-base-content/60">No categories found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								@ui.TableHead() {
									Name 
								}
								@ui.TableHead() {
									Description 
								}
								@ui.TableHead() {
									Created At 
								}
								@ui.TableHead() {
									Updated At 
								}
								@ui.TableHead() {
									Actions 
								}
							}
						}
						@ui.TableBody() {
							for _, category := range categories {
								@ui.TableRow() {
									@ui.TableCell() {
										{ category.Name }
									}
									@ui.TableCell() {
										{ category.Description }
									}
									@ui.TableCell() {
										{ category.CreatedAt.String() }
									}
									@ui.TableCell() {
										{ category.UpdatedAt.String() }
									}
									@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href="/">View</a>
											<a class="text-base-content/80 hover:text-base-content" href="/">Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ CategoryShow(category models.Category) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Category Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref("/").Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href="/">Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Name"}).Render()
								<p class="text-sm text-base-content">{ category.Name }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Description"}).Render()
								<p class="text-sm text-base-content">{ category.Description }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ category.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ category.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ CategoryNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New Category")
						@ui.CardDescription("Enter the details for the new category.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("new-category-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Description"}).WithFor("description").Render()
									@ui.Input("description").Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create Category"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ CategoryEdit(category models.Category) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit Category")
						@ui.CardDescription("Update the details for this category.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("edit-category-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Name"}).WithFor("name").Render()
									@ui.Input("name").WithValue(category.Name).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Description"}).WithFor("description").Render()
									@ui.Input("description").WithValue(category.Description).Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update Category"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy Category"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", fmt.Sprintf("@delete('%s')", "/")).Render()
					}
				}
			</div>
		</main>
	}
}
