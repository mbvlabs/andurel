package views

import (
	"fmt"
	"net/http"
	"testapp/internal/hypermedia"
	ui "testapp/internal/ui"
	"testapp/models"
	"testapp/router/routes"
)

templ ReviewIndex(reviews []models.Review) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Reviews</h1>
					@ui.Button(ui.ButtonProps{Label: "New Review"}).WithHref(routes.ReviewNew.URL()).Render()
				</div>
				if len(reviews) == 0 {
					<p class="text-sm text-base-content/60">No reviews found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								@ui.TableHead() {
									Title 
								}
								@ui.TableHead() {
									Body 
								}
								@ui.TableHead() {
									Rating 
								}
								@ui.TableHead() {
									Created At 
								}
								@ui.TableHead() {
									Updated At 
								}
								@ui.TableHead() {
									Actions 
								}
							}
						}
						@ui.TableBody() {
							for _, review := range reviews {
								@ui.TableRow() {
									@ui.TableCell() {
										{ review.Title }
									}
									@ui.TableCell() {
										{ review.Body }
									}
									@ui.TableCell() {
										{ fmt.Sprintf("%d", review.Rating) }
									}
									@ui.TableCell() {
										{ review.CreatedAt.String() }
									}
									@ui.TableCell() {
										{ review.UpdatedAt.String() }
									}
									@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href={ routes.ReviewShow.URL(review.ID) }>View</a>
											<a class="text-base-content/80 hover:text-base-content" href={ routes.ReviewEdit.URL(review.ID) }>Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ ReviewShow(review models.Review) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Review Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref(routes.ReviewEdit.URL(review.ID)).Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ routes.ReviewIndex.URL() }>Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Title"}).Render()
								<p class="text-sm text-base-content">{ review.Title }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Body"}).Render()
								<p class="text-sm text-base-content">{ review.Body }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Rating"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%d", review.Rating) }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ review.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ review.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ ReviewNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New Review")
						@ui.CardDescription("Enter the details for the new review.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: routes.ReviewCreate.URL()}, ui.WithClass("space-y-5"), ui.WithFragment("new-review-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Title"}).WithFor("title").Render()
									@ui.Input("title").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Body"}).WithFor("body").Render()
									@ui.Input("body").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Rating"}).WithFor("rating").Render()
									@ui.Input("rating").WithType(ui.InputTypeNumber).Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create Review"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ ReviewEdit(review models.Review) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit Review")
						@ui.CardDescription("Update the details for this review.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: routes.ReviewUpdate.URL(review.ID)}, ui.WithClass("space-y-5"), ui.WithFragment("edit-review-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Title"}).WithFor("title").Render()
									@ui.Input("title").WithValue(review.Title).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Body"}).WithFor("body").Render()
									@ui.Input("body").WithValue(review.Body).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Rating"}).WithFor("rating").Render()
									@ui.Input("rating").WithType(ui.InputTypeNumber).WithValue(fmt.Sprintf("%d", review.Rating)).Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update Review"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy Review"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", hypermedia.DataAction(http.MethodDelete, routes.ReviewDestroy.URL(review.ID))).Render()
					}
				}
			</div>
		</main>
	}
}
