package views

import (
	"fmt"
	"net/http"
	"testapp/internal/hypermedia"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ ItemIndex(items []models.Item) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Items</h1>
					@components.Button(components.ButtonProps{Label: "New Item"}).WithHref(routes.ItemNew.URL()).Render()
				</div>
				if len(items) == 0 {
					<p class="text-sm text-base-content/60">No items found.</p>
				} else {
					@components.Table() {
						@components.TableHeader() {
							@components.TableRow() {
								@components.TableHead() {
									Warehouse Id 
								}
								@components.TableHead() {
									Name 
								}
								@components.TableHead() {
									Quantity 
								}
								@components.TableHead() {
									Created At 
								}
								@components.TableHead() {
									Updated At 
								}
								@components.TableHead() {
									Actions 
								}
							}
						}
						@components.TableBody() {
							for _, item := range items {
								@components.TableRow() {
									@components.TableCell() {
										{ item.WarehouseID.String() }
									}
									@components.TableCell() {
										{ item.Name }
									}
									@components.TableCell() {
										{ fmt.Sprintf("%d", item.Quantity) }
									}
									@components.TableCell() {
										{ item.CreatedAt.String() }
									}
									@components.TableCell() {
										{ item.UpdatedAt.String() }
									}
									@components.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.ItemShow.URL(item.ID)) }>View</a>
											<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.ItemEdit.URL(item.ID)) }>Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ ItemShow(item models.Item) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Item Details</h1>
					<div class="flex flex-wrap gap-3">
						@components.Button(components.ButtonProps{Label: "Edit"}).WithHref(routes.ItemEdit.URL(item.ID)).Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ templ.URL(routes.ItemIndex.URL()) }>Back to List</a>
					</div>
				</div>
				@components.Card() {
					@components.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Warehouse Id"}).Render()
								<p class="text-sm text-base-content">{ item.WarehouseID.String() }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Name"}).Render()
								<p class="text-sm text-base-content">{ item.Name }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Quantity"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%d", item.Quantity) }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ item.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ item.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ ItemNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@components.Card() {
					@components.CardHeader() {
						@components.CardTitle("New Item")
						@components.CardDescription("Enter the details for the new item.")
					}
					@components.CardContent() {
						@components.Form(components.FormProps{Action: http.MethodPost, URL: routes.ItemCreate.URL()}, components.WithClass("space-y-5"), components.WithFragment("new-item-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Warehouse Id"}).WithFor("warehouseId").Render()
									@components.Input("warehouseId").Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Name"}).WithFor("name").Render()
									@components.Input("name").Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Quantity"}).WithFor("quantity").Render()
									@components.Input("quantity").WithType(components.InputTypeNumber).Render()
								</div>
							</div>
							@components.Button(components.ButtonProps{Label: "Create Item"}).WithType(components.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ ItemEdit(item models.Item) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@components.Card() {
					@components.CardHeader() {
						@components.CardTitle("Edit Item")
						@components.CardDescription("Update the details for this item.")
					}
					@components.CardContent() {
						@components.Form(components.FormProps{Action: http.MethodPut, URL: routes.ItemUpdate.URL(item.ID)}, components.WithClass("space-y-5"), components.WithFragment("edit-item-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Warehouse Id"}).WithFor("warehouseId").Render()
									@components.Input("warehouseId").WithValue(item.WarehouseID.String()).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Name"}).WithFor("name").Render()
									@components.Input("name").WithValue(item.Name).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Quantity"}).WithFor("quantity").Render()
									@components.Input("quantity").WithType(components.InputTypeNumber).WithValue(fmt.Sprintf("%d", item.Quantity)).Render()
								</div>
							</div>
							@components.Button(components.ButtonProps{Label: "Update Item"}).WithType(components.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@components.Separator().Render()
						@components.Button(components.ButtonProps{Label: "Destroy Item"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", hypermedia.DataAction(http.MethodDelete, routes.ItemDestroy.URL(item.ID))).Render()
					}
				}
			</div>
		</main>
	}
}
