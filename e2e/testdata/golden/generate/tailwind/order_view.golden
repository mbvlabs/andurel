package views

import (
	"fmt"
	"net/http"
	"testapp/internal/hypermedia"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ OrderIndex(orders []models.Order) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Orders</h1>
					@components.Button(components.ButtonProps{Label: "New Order"}).WithHref(routes.OrderNew.URL()).Render()
				</div>
				if len(orders) == 0 {
					<p class="text-sm text-base-content/60">No orders found.</p>
				} else {
					@components.Table() {
						@components.TableHeader() {
							@components.TableRow() {
								@components.TableHead() {
									Account Id 
								}
								@components.TableHead() {
									Customer Name 
								}
								@components.TableHead() {
									Total 
								}
								@components.TableHead() {
									Signature 
								}
								@components.TableHead() {
									Created At 
								}
								@components.TableHead() {
									Updated At 
								}
								@components.TableHead() {
									Actions 
								}
							}
						}
						@components.TableBody() {
							for _, order := range orders {
								@components.TableRow() {
									@components.TableCell() {
										{ order.AccountID.String() }
									}
									@components.TableCell() {
										{ order.CustomerName }
									}
									@components.TableCell() {
										{ fmt.Sprintf("%f", order.Total) }
									}
									@components.TableCell() {
										{ string(order.Signature) }
									}
									@components.TableCell() {
										{ order.CreatedAt.String() }
									}
									@components.TableCell() {
										{ order.UpdatedAt.String() }
									}
									@components.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.OrderShow.URL(order.ID)) }>View</a>
											<a class="text-base-content/80 hover:text-base-content" href={ templ.URL(routes.OrderEdit.URL(order.ID)) }>Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ OrderShow(order models.Order) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Order Details</h1>
					<div class="flex flex-wrap gap-3">
						@components.Button(components.ButtonProps{Label: "Edit"}).WithHref(routes.OrderEdit.URL(order.ID)).Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href={ templ.URL(routes.OrderIndex.URL()) }>Back to List</a>
					</div>
				</div>
				@components.Card() {
					@components.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Account Id"}).Render()
								<p class="text-sm text-base-content">{ order.AccountID.String() }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Customer Name"}).Render()
								<p class="text-sm text-base-content">{ order.CustomerName }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Total"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%f", order.Total) }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Signature"}).Render()
								<p class="text-sm text-base-content">{ string(order.Signature) }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ order.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@components.Label(components.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ order.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ OrderNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@components.Card() {
					@components.CardHeader() {
						@components.CardTitle("New Order")
						@components.CardDescription("Enter the details for the new order.")
					}
					@components.CardContent() {
						@components.Form(components.FormProps{Action: http.MethodPost, URL: routes.OrderCreate.URL()}, components.WithClass("space-y-5"), components.WithFragment("new-order-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Account Id"}).WithFor("accountId").Render()
									@components.Input("accountId").Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Customer Name"}).WithFor("customerName").Render()
									@components.Input("customerName").Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Total"}).WithFor("total").Render()
									@components.Input("total").WithType(components.InputTypeNumber).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Signature"}).WithFor("signature").Render()
									@components.Input("signature").Render()
								</div>
							</div>
							@components.Button(components.ButtonProps{Label: "Create Order"}).WithType(components.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ OrderEdit(order models.Order) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@components.Card() {
					@components.CardHeader() {
						@components.CardTitle("Edit Order")
						@components.CardDescription("Update the details for this order.")
					}
					@components.CardContent() {
						@components.Form(components.FormProps{Action: http.MethodPut, URL: routes.OrderUpdate.URL(order.ID)}, components.WithClass("space-y-5"), components.WithFragment("edit-order-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Account Id"}).WithFor("accountId").Render()
									@components.Input("accountId").WithValue(order.AccountID.String()).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Customer Name"}).WithFor("customerName").Render()
									@components.Input("customerName").WithValue(order.CustomerName).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Total"}).WithFor("total").Render()
									@components.Input("total").WithType(components.InputTypeNumber).WithValue(fmt.Sprintf("%f", order.Total)).Render()
								</div>
								<div class="space-y-1">
									@components.Label(components.LabelProps{Text: "Signature"}).WithFor("signature").Render()
									@components.Input("signature").WithValue(string(order.Signature)).Render()
								</div>
							</div>
							@components.Button(components.ButtonProps{Label: "Update Order"}).WithType(components.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@components.Separator().Render()
						@components.Button(components.ButtonProps{Label: "Destroy Order"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", hypermedia.DataAction(http.MethodDelete, routes.OrderDestroy.URL(order.ID))).Render()
					}
				}
			</div>
		</main>
	}
}
