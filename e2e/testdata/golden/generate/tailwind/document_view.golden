package views

import (
	"fmt"
	"net/http"
	"strings"
	ui "testapp/internal/ui"
	"testapp/models"
)

templ DocumentIndex(documents []models.Document) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Documents</h1>
					@ui.Button(ui.ButtonProps{Label: "New Document"}).WithHref("/").Render()
				</div>
				if len(documents) == 0 {
					<p class="text-sm text-base-content/60">No documents found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								@ui.TableHead() {
									Title 
								}
								@ui.TableHead() {
									Tags 
								}
								@ui.TableHead() {
									Page Numbers 
								}
								@ui.TableHead() {
									View Count 
								}
								@ui.TableHead() {
									Is Published 
								}
								@ui.TableHead() {
									Created At 
								}
								@ui.TableHead() {
									Updated At 
								}
								@ui.TableHead() {
									Actions 
								}
							}
						}
						@ui.TableBody() {
							for _, document := range documents {
								@ui.TableRow() {
									@ui.TableCell() {
										{ document.Title }
									}
									@ui.TableCell() {
										{ strings.Join(document.Tags, ", ") }
									}
									@ui.TableCell() {
										{ fmt.Sprintf("%v", document.PageNumbers) }
									}
									@ui.TableCell() {
										{ fmt.Sprintf("%d", document.ViewCount) }
									}
									@ui.TableCell() {
										{ fmt.Sprintf("%t", document.IsPublished) }
									}
									@ui.TableCell() {
										{ document.CreatedAt.String() }
									}
									@ui.TableCell() {
										{ document.UpdatedAt.String() }
									}
									@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href="/">View</a>
											<a class="text-base-content/80 hover:text-base-content" href="/">Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ DocumentShow(document models.Document) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">Document Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref("/").Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href="/">Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Title"}).Render()
								<p class="text-sm text-base-content">{ document.Title }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Tags"}).Render()
								<p class="text-sm text-base-content">{ strings.Join(document.Tags, ", ") }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Page Numbers"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%v", document.PageNumbers) }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "View Count"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%d", document.ViewCount) }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Is Published"}).Render()
								<p class="text-sm text-base-content">{ fmt.Sprintf("%t", document.IsPublished) }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Created At"}).Render()
								<p class="text-sm text-base-content">{ document.CreatedAt.String() }</p>
							</div>
							<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "Updated At"}).Render()
								<p class="text-sm text-base-content">{ document.UpdatedAt.String() }</p>
							</div>
						</div>
					}
				}
			</div>
		</main>
	}
}

templ DocumentNew() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New Document")
						@ui.CardDescription("Enter the details for the new document.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("new-document-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Title"}).WithFor("title").Render()
									@ui.Input("title").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Tags"}).WithFor("tags").Render()
									@ui.Input("tags").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Page Numbers"}).WithFor("pageNumbers").Render()
									@ui.Input("pageNumbers").Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "View Count"}).WithFor("viewCount").Render()
									@ui.Input("viewCount").WithType(ui.InputTypeNumber).Render()
								</div>
								<div class="flex items-center gap-2">
									@ui.Checkbox("isPublished").Render()
									@ui.Label(ui.LabelProps{Text: "Is Published"}).WithFor("isPublished").Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create Document"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ DocumentEdit(document models.Document) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit Document")
						@ui.CardDescription("Update the details for this document.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("edit-document-form")) {
							<div class="space-y-4">
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Title"}).WithFor("title").Render()
									@ui.Input("title").WithValue(document.Title).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Tags"}).WithFor("tags").Render()
									@ui.Input("tags").WithValue(strings.Join(document.Tags, ", ")).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "Page Numbers"}).WithFor("pageNumbers").Render()
									@ui.Input("pageNumbers").WithValue(fmt.Sprintf("%v", document.PageNumbers)).Render()
								</div>
								<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "View Count"}).WithFor("viewCount").Render()
									@ui.Input("viewCount").WithType(ui.InputTypeNumber).WithValue(fmt.Sprintf("%d", document.ViewCount)).Render()
								</div>
								<div class="flex items-center gap-2">
									@ui.Checkbox("isPublished").WithChecked(document.IsPublished).Render()
									@ui.Label(ui.LabelProps{Text: "Is Published"}).WithFor("isPublished").Render()
								</div>
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update Document"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy Document"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", fmt.Sprintf("@delete('%s')", "/")).Render()
					}
				}
			</div>
		</main>
	}
}
