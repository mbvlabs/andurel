package models

import (
	"context"
	"errors"
	"time"

	"github.com/google/uuid"
	"github.com/jackc/pgx/v5/pgtype"

	"testapp/internal/storage"
	"testapp/models/internal/db"
)

type Item struct {
	ID        uuid.UUID
	Name      string
	Quantity  int32
	CreatedAt time.Time
	UpdatedAt time.Time
}

func FindItem(
	ctx context.Context,
	exec storage.Executor,
	id uuid.UUID,
) (Item, error) {
	row, err := queries.QueryItemByID(ctx, exec, id)
	if err != nil {
		return Item{}, err
	}

	return rowToItem(row), nil
}

type CreateItemData struct {
	Name     string
	Quantity int32
}

func CreateItem(
	ctx context.Context,
	exec storage.Executor,
	data CreateItemData,
) (Item, error) {
	if err := validate.Struct(data); err != nil {
		return Item{}, errors.Join(ErrDomainValidation, err)
	}

	params := db.InsertItemParams{
		ID:       uuid.New(),
		Name:     data.Name,
		Quantity: pgtype.Int4{Int32: data.Quantity, Valid: true},
	}
	row, err := queries.InsertItem(ctx, exec, params)
	if err != nil {
		return Item{}, err
	}

	return rowToItem(row), nil
}

type UpdateItemData struct {
	ID        uuid.UUID
	Name      string
	Quantity  int32
	UpdatedAt time.Time
}

func UpdateItem(
	ctx context.Context,
	exec storage.Executor,
	data UpdateItemData,
) (Item, error) {
	if err := validate.Struct(data); err != nil {
		return Item{}, errors.Join(ErrDomainValidation, err)
