func DestroyItem(
	ctx context.Context,
	exec storage.Executor,
	id uuid.UUID,
) error {
	return queries.DeleteItem(ctx, exec, id)
}

func AllItems(
	ctx context.Context,
	exec storage.Executor,
) ([]Item, error) {
	rows, err := queries.QueryItems(ctx, exec)
	if err != nil {
		return nil, err
	}

	items := make([]Item, len(rows))
	for i, row := range rows {
		items[i] = rowToItem(row)
	}

	return items, nil
}

type PaginatedItems struct {
	Items      []Item
	TotalCount int64
	Page       int64
	PageSize   int64
	TotalPages int64
}

func PaginateItems(
	ctx context.Context,
	exec storage.Executor,
	page int64,
	pageSize int64,
) (PaginatedItems, error) {
	if page < 1 {
		page = 1
	}
	if pageSize < 1 {
		pageSize = 10
	}
	if pageSize > 100 {
		pageSize = 100
	}

	offset := (page - 1) * pageSize

	totalCount, err := queries.CountItems(ctx, exec)
	if err != nil {
		return PaginatedItems{}, err
	}

	rows, err := queries.QueryPaginatedItems(
		ctx,
		exec,
		db.QueryPaginatedItemsParams{
			Limit:  pageSize,
			Offset: offset,
		},
	)
	if err != nil {
		return PaginatedItems{}, err
	}

	items := make([]Item, len(rows))
	for i, row := range rows {
		items[i] = rowToItem(row)
	}

	totalPages := (totalCount + int64(pageSize) - 1) / int64(pageSize)

	return PaginatedItems{
		Items:      items,
		TotalCount: totalCount,
		Page:       page,
		PageSize:   pageSize,
		TotalPages: totalPages,
	}, nil
}

func UpsertItem(
	ctx context.Context,
	exec storage.Executor,
	data CreateItemData,
) (Item, error) {
	if err := validate.Struct(data); err != nil {
		return Item{}, errors.Join(ErrDomainValidation, err)
	}

	params := db.UpsertItemParams{
		ID:       uuid.New(),
		Name:     data.Name,
		Quantity: pgtype.Int4{Int32: data.Quantity, Valid: true},
	}
	row, err := queries.UpsertItem(ctx, exec, params)
	if err != nil {
		return Item{}, err
	}

	return rowToItem(row), nil
}

func rowToItem(row db.Item) Item {
	return Item{
		ID:        row.ID,
		Name:      row.Name,
		Quantity:  row.Quantity.Int32,
		CreatedAt: row.CreatedAt.Time,
		UpdatedAt: row.UpdatedAt.Time,
	}
}
