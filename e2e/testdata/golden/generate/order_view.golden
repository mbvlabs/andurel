package views

import (
	"fmt"
	"net/http"
	"testapp/internal/hypermedia"
	"testapp/models"
	"testapp/router/routes"
	"testapp/views/components"
)

templ OrderIndex(orders []models.Order) {
	@base() {
		<main>
			<div>
				<h1>Orders</h1>
				<a href={ templ.URL(routes.OrderNew.URL()) }>New Order</a>
			</div>
			<div>
				<div>
					if len(orders) == 0 {
						<p>No orders found.</p>
					} else {
						<div>
							<table>
								<thead>
									<tr>
										<th>Customer Name</th>
										<th>Total</th>
										<th>Created At</th>
										<th>Updated At</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									for _, order := range orders {
										<tr>
											<td>{ order.CustomerName }</td>
											<td>{ fmt.Sprintf("%f", order.Total) }</td>
											<td>{ order.CreatedAt.String() }</td>
											<td>{ order.UpdatedAt.String() }</td>
											<td>
												<a href={ templ.URL(routes.OrderShow.URL(order.ID)) }>View</a>
												<a href={ templ.URL(routes.OrderEdit.URL(order.ID)) }>Edit</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</main>
	}
}

templ OrderShow(order models.Order) {
	@base() {
		<main>
			<div>
				<h1>Order Details</h1>
				<div>
					<a href={ templ.URL(routes.OrderEdit.URL(order.ID)) }>Edit</a>
					<a href={ templ.URL(routes.OrderIndex.URL()) }>Back to List</a>
				</div>
			</div>
			<div>
				<div>
					<div>
						<div>
							<label>Customer Name</label>
							<p>{ order.CustomerName }</p>
						</div>
						<div>
							<label>Total</label>
							<p>{ fmt.Sprintf("%f", order.Total) }</p>
						</div>
						<div>
							<label>Created At</label>
							<p>{ order.CreatedAt.String() }</p>
						</div>
						<div>
							<label>Updated At</label>
							<p>{ order.UpdatedAt.String() }</p>
						</div>
					</div>
				</div>
			</div>
		</main>
	}
}

templ OrderNew() {
	@base() {
		<main>
			<div>
				<h1>New Order</h1>
				<a href={ templ.URL(routes.OrderIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ hypermedia.DataAction(http.MethodPost, routes.OrderCreate.URL(), hypermedia.ActionTypeForm) }>
						<div>
							<div>
								<h2>Order Information</h2>
								<p>Enter the details for the new order.</p>
								<div>
									<div>
										@components.InputField("Customer Name", "customer_name", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Total", "total", "number", "", false, components.FieldProp{})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.OrderIndex.URL()) }>Cancel</a>
							<button type="submit">Create Order</button>
						</div>
					</form>
				</div>
			</div>
		</main>
	}
}

templ OrderEdit(order models.Order) {
	@base() {
		<main>
			<div>
				<h1>Edit Order</h1>
				<a href={ templ.URL(routes.OrderIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={ hypermedia.DataAction(http.MethodPut, routes.OrderUpdate.URL(order.ID), hypermedia.ActionTypeForm) }>
						<div>
							<div>
								<h2>Order Information</h2>
								<p>Update the details for this order.</p>
								<div>
									<div>
										@components.InputField("Customer Name", "customer_name", "text", "", false, components.FieldProp{
											Value: order.CustomerName,
										})
									</div>
									<div>
										@components.InputField("Total", "total", "number", "", false, components.FieldProp{
											Value: fmt.Sprintf("%f", order.Total),
										})
									</div>
								</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.OrderIndex.URL()) }>Cancel</a>
							<button type="submit">Update Order</button>
						</div>
					</form>
					<div>
						<button
							data-on:click={ hypermedia.DataAction(http.MethodDelete, routes.OrderDestroy.URL(order.ID)) }
						>Destroy Order</button>
					</div>
				</div>
			</div>
		</main>
	}
}
