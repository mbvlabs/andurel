// Package controllers provides HTTP handlers for the web application.
package controllers

import (
	"{{.ModulePath}}/internal/renderer"
	"{{.ModulePath}}/router/cookies"

	"github.com/a-h/templ"
	"github.com/labstack/echo/v4"
)

func render(eCtx echo.Context, t templ.Component) error {
	return renderer.Render(
		eCtx,
		t,
		[]renderer.CookieKey{
			cookies.AppKey,
			cookies.FlashKey,
		},
	)
}
