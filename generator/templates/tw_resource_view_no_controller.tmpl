package views

import (
	"fmt"
	"net/http"
	"strings"
	"{{.ModulePath}}/models"
	ui "{{.ModulePath}}/internal/ui"
)

templ {{.ResourceName}}Index({{.PluralName}} []models.{{.ResourceName}}) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-5xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">{{Plural .ResourceName}}</h1>
					@ui.Button(ui.ButtonProps{Label: "New {{.ResourceName}}"}).WithHref("/").Render()
				</div>
				if len({{.PluralName}}) == 0 {
					<p class="text-sm text-base-content/60">No {{.PluralName}} found.</p>
				} else {
					@ui.Table() {
						@ui.TableHeader() {
							@ui.TableRow() {
								{{range .Fields}}@ui.TableHead() { {{.DisplayName}} }
								{{end}}@ui.TableHead() { Actions }
							}
						}
						@ui.TableBody() {
							for _, {{.ResourceName | ToLower}} := range {{.PluralName}} {
								@ui.TableRow() {
									{{range .Fields}}@ui.TableCell() { {{StringTableDisplay . $.ResourceName}} }
									{{end}}@ui.TableCell() {
										<div class="flex flex-wrap gap-3 text-sm">
											<a class="text-base-content/80 hover:text-base-content" href="/">View</a>
											<a class="text-base-content/80 hover:text-base-content" href="/">Edit</a>
										</div>
									}
								}
							}
						}
					}
				}
			</div>
		</main>
	}
}

templ {{.ResourceName}}Show({{.ResourceName | ToLower}} models.{{.ResourceName}}) {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-4xl flex-col gap-6">
				<div class="flex flex-wrap items-center justify-between gap-4">
					<h1 class="text-2xl font-semibold tracking-tight text-base-content">{{.ResourceName}} Details</h1>
					<div class="flex flex-wrap gap-3">
						@ui.Button(ui.ButtonProps{Label: "Edit"}).WithHref("/").Render()
						<a class="text-sm text-base-content/70 hover:text-base-content" href="/">Back to List</a>
					</div>
				</div>
				@ui.Card() {
					@ui.CardContent() {
						<div class="grid gap-5 sm:grid-cols-2">
							{{range .Fields}}<div class="space-y-1">
								@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).Render()
								<p class="text-sm text-base-content">{{StringDisplay . $.ResourceName}}</p>
							</div>
							{{end}}
						</div>
					}
				}
			</div>
		</main>
	}
}

templ {{.ResourceName}}New() {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("New {{.ResourceName}}")
						@ui.CardDescription("Enter the details for the new {{.ResourceName | ToLower}}.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPost, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("new-{{.ResourceName | ToLower}}-form")) {
							<div class="space-y-4">
								{{range .Fields}}{{if not .IsSystemField}}{{if eq .InputType "checkbox"}}<div class="flex items-center gap-2">
									@ui.Checkbox("{{.CamelCase}}").Render()
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
								</div>
								{{else if eq .InputType "date"}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Datepicker("{{.CamelCase}}").Render()
								</div>
								{{else if eq .InputType "number"}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Input("{{.CamelCase}}").WithType(ui.InputTypeNumber).Render()
								</div>
								{{else}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Input("{{.CamelCase}}").Render()
								</div>
								{{end}}{{end}}{{end}}
							</div>
							@ui.Button(ui.ButtonProps{Label: "Create {{.ResourceName}}"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
					}
				}
			</div>
		</main>
	}
}

templ {{.ResourceName}}Edit({{.ResourceName | ToLower}} models.{{.ResourceName}}) {
	@base() {
		<main class="flex-1 flex items-center justify-center px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				@ui.Card() {
					@ui.CardHeader() {
						@ui.CardTitle("Edit {{.ResourceName}}")
						@ui.CardDescription("Update the details for this {{.ResourceName | ToLower}}.")
					}
					@ui.CardContent() {
						@ui.Form(ui.FormProps{Action: http.MethodPut, URL: "/"}, ui.WithClass("space-y-5"), ui.WithFragment("edit-{{.ResourceName | ToLower}}-form")) {
							<div class="space-y-4">
								{{range .Fields}}{{if not .IsSystemField}}{{if eq .InputType "checkbox"}}<div class="flex items-center gap-2">
									@ui.Checkbox("{{.CamelCase}}").WithChecked({{FieldRef . $.ResourceName}}).Render()
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
								</div>
								{{else if eq .InputType "date"}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Datepicker("{{.CamelCase}}").WithValue({{StringValue . $.ResourceName}}).Render()
								</div>
								{{else if eq .InputType "number"}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Input("{{.CamelCase}}").WithType(ui.InputTypeNumber).WithValue({{StringValue . $.ResourceName}}).Render()
								</div>
								{{else}}<div class="space-y-1">
									@ui.Label(ui.LabelProps{Text: "{{.DisplayName}}"}).WithFor("{{.CamelCase}}").Render()
									@ui.Input("{{.CamelCase}}").WithValue({{StringValue . $.ResourceName}}).Render()
								</div>
								{{end}}{{end}}{{end}}
							</div>
							@ui.Button(ui.ButtonProps{Label: "Update {{.ResourceName}}"}).WithType(ui.ButtonTypeSubmit).WithFullWidth(true).Render()
						}
						@ui.Separator().Render()
						@ui.Button(ui.ButtonProps{Label: "Destroy {{.ResourceName}}"}).MakeDestructive().WithFullWidth(true).WithAttr("data-on:click", fmt.Sprintf("@delete('%s')", "/")).Render()
					}
				}
			</div>
		</main>
	}
}
