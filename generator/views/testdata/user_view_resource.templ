package views

import (
	"net/http"
	"github.com/example/myapp/models"
	"github.com/example/myapp/router/routes"
	"github.com/example/myapp/views/components"
)

templ UserIndex(users []models.User) {
	@base() {
		<div>
			<div>
				<h1>Users</h1>
				<a href={ templ.URL(routes.UserNew.URL()) }>New User</a>
			</div>
			<div>
				<div>
					if len(users) == 0 {
						<p>No users found.</p>
					} else {
						<div>
							<table>
								<thead>
									<tr>
										<th>Email</th>
										<th>Name</th>
										<th>Age</th>
										<th>Is Active</th>
										<th>Created At</th>
										<th>Updated At</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									for _, user := range users {
										<tr>
											<td>{ user.Email }</td>
											<td>{ user.Name }</td>
											<td>{ fmt.Sprintf("%d", user.Age) }</td>
											<td>{ fmt.Sprintf("%t", user.IsActive) }</td>
											<td>{ user.CreatedAt.String() }</td>
											<td>{ user.UpdatedAt.String() }</td>
											<td>
												<a href={ templ.URL(routes.UserShow.URL(user.ID)) }>View</a>
												<a href={ templ.URL(routes.UserEdit.URL(user.ID)) }>Edit</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</div>
	}
}

templ UserShow(user models.User) {
	@base() {
		<div>
			<div>
				<h1>User Details</h1>
				<div>
					<a href={ templ.URL(routes.UserEdit.URL(user.ID)) }>Edit</a>
					<a href={ templ.URL(routes.UserIndex.URL()) }>Back to List</a>
				</div>
			</div>
			<div>
				<div>
					<div>
						<div>
							<label>Email</label>
							<p>{ user.Email }</p>
						</div>
						<div>
							<label>Name</label>
							<p>{ user.Name }</p>
						</div>
						<div>
							<label>Age</label>
							<p>{ fmt.Sprintf("%d", user.Age) }</p>
						</div>
						<div>
							<label>Is Active</label>
							<p>{ fmt.Sprintf("%t", user.IsActive) }</p>
						</div>
						<div>
							<label>Created At</label>
							<p>{ user.CreatedAt.String() }</p>
						</div>
						<div>
							<label>Updated At</label>
							<p>{ user.UpdatedAt.String() }</p>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	}
}

templ UserNew() {
	@base() {
		<div>
			<div>
				<h1>New User</h1>
				<a href={ templ.URL(routes.UserIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={DataAction(http.MethodPost, routes.UserCreate.URL(), ActionTypeForm)}>
						<div>
							<div>
								<h2>User Information</h2>
								<p>Enter the details for the new user.</p>
								<div>
									<div>
										@components.InputField("Email", "email", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Age", "age", "number", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Is Active", "is_active", "checkbox", "", false, components.FieldProp{})
									</div>
									</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.UserIndex.URL()) }>Cancel</a>
							<button type="submit">Create User</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	}
}

templ UserEdit(user models.User) {
	@base() {
		<div>
			<div>
				<h1>Edit User</h1>
				<a href={ templ.URL(routes.UserIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={DataAction(http.MethodPut, routes.UserUpdate.URL(user.ID), ActionTypeForm)}>
						<div>
							<div>
								<h2>User Information</h2>
								<p>Update the details for this user.</p>
								<div>
									<div>
										@components.InputField("Email", "email", "text", "", false, components.FieldProp{
											Value: user.Email,
										})
									</div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{
											Value: user.Name,
										})
									</div>
									<div>
										@components.InputField("Age", "age", "number", "", false, components.FieldProp{
											Value: fmt.Sprintf("%d", user.Age),
										})
									</div>
									<div>
										@components.InputField("Is Active", "is_active", "checkbox", "", false, components.FieldProp{
											Value: fmt.Sprintf("%t", user.IsActive),
										})
									</div>
									</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.UserIndex.URL()) }>Cancel</a>
							<button type="submit">Update User</button>
						</div>
					</form>
					<div>
						<button
							data-on:click={DataAction(http.MethodDelete, routes.UserDestroy.URL(user.ID)) }>Destroy User</button>
					</div>
				</div>
			</div>
		</div>
	}
}
