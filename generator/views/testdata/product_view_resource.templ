package views

import (
	"net/http"
	"github.com/example/shop/models"
	"github.com/example/shop/router/routes"
	"github.com/example/shop/views/components"
)

templ ProductIndex(products []models.Product) {
	@base() {
		<div>
			<div>
				<h1>Products</h1>
				<a href={ templ.URL(routes.ProductNew.URL()) }>New Product</a>
			</div>
			<div>
				<div>
					if len(products) == 0 {
						<p>No products found.</p>
					} else {
						<div>
							<table>
								<thead>
									<tr>
										<th>Name</th>
										<th>Price</th>
										<th>Description</th>
										<th>Category Id</th>
										<th>In Stock</th>
										<th>Metadata</th>
										<th>Created At</th>
										<th>Updated At</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									for _, product := range products {
										<tr>
											<td>{ product.Name }</td>
											<td>{ fmt.Sprintf("%f", product.Price) }</td>
											<td>{ product.Description }</td>
											<td>{ fmt.Sprintf("%d", product.CategoryID) }</td>
											<td>{ fmt.Sprintf("%t", product.InStock) }</td>
											<td>{ string(product.Metadata) }</td>
											<td>{ product.CreatedAt.String() }</td>
											<td>{ product.UpdatedAt.String() }</td>
											<td>
												<a href={ templ.URL(routes.ProductShow.URL(product.ID)) }>View</a>
												<a href={ templ.URL(routes.ProductEdit.URL(product.ID)) }>Edit</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					}
				</div>
			</div>
		</div>
	}
}

templ ProductShow(product models.Product) {
	@base() {
		<div>
			<div>
				<h1>Product Details</h1>
				<div>
					<a href={ templ.URL(routes.ProductEdit.URL(product.ID)) }>Edit</a>
					<a href={ templ.URL(routes.ProductIndex.URL()) }>Back to List</a>
				</div>
			</div>
			<div>
				<div>
					<div>
						<div>
							<label>Name</label>
							<p>{ product.Name }</p>
						</div>
						<div>
							<label>Price</label>
							<p>{ fmt.Sprintf("%f", product.Price) }</p>
						</div>
						<div>
							<label>Description</label>
							<p>{ product.Description }</p>
						</div>
						<div>
							<label>Category Id</label>
							<p>{ fmt.Sprintf("%d", product.CategoryID) }</p>
						</div>
						<div>
							<label>In Stock</label>
							<p>{ fmt.Sprintf("%t", product.InStock) }</p>
						</div>
						<div>
							<label>Metadata</label>
							<p>{ string(product.Metadata) }</p>
						</div>
						<div>
							<label>Created At</label>
							<p>{ product.CreatedAt.String() }</p>
						</div>
						<div>
							<label>Updated At</label>
							<p>{ product.UpdatedAt.String() }</p>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	}
}

templ ProductNew() {
	@base() {
		<div>
			<div>
				<h1>New Product</h1>
				<a href={ templ.URL(routes.ProductIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={DataAction(http.MethodPost, routes.ProductCreate.URL(), ActionTypeForm)}>
						<div>
							<div>
								<h2>Product Information</h2>
								<p>Enter the details for the new product.</p>
								<div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Price", "price", "number", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Description", "description", "text", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Category Id", "category_id", "number", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("In Stock", "in_stock", "checkbox", "", false, components.FieldProp{})
									</div>
									<div>
										@components.InputField("Metadata", "metadata", "text", "", false, components.FieldProp{})
									</div>
									</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ProductIndex.URL()) }>Cancel</a>
							<button type="submit">Create Product</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	}
}

templ ProductEdit(product models.Product) {
	@base() {
		<div>
			<div>
				<h1>Edit Product</h1>
				<a href={ templ.URL(routes.ProductIndex.URL()) }>Back to List</a>
			</div>
			<div>
				<div>
					<form data-on:submit={DataAction(http.MethodPut, routes.ProductUpdate.URL(product.ID), ActionTypeForm)}>
						<div>
							<div>
								<h2>Product Information</h2>
								<p>Update the details for this product.</p>
								<div>
									<div>
										@components.InputField("Name", "name", "text", "", false, components.FieldProp{
											Value: product.Name,
										})
									</div>
									<div>
										@components.InputField("Price", "price", "number", "", false, components.FieldProp{
											Value: fmt.Sprintf("%f", product.Price),
										})
									</div>
									<div>
										@components.InputField("Description", "description", "text", "", false, components.FieldProp{
											Value: product.Description,
										})
									</div>
									<div>
										@components.InputField("Category Id", "category_id", "number", "", false, components.FieldProp{
											Value: fmt.Sprintf("%d", product.CategoryID),
										})
									</div>
									<div>
										@components.InputField("In Stock", "in_stock", "checkbox", "", false, components.FieldProp{
											Value: fmt.Sprintf("%t", product.InStock),
										})
									</div>
									<div>
										@components.InputField("Metadata", "metadata", "text", "", false, components.FieldProp{
											Value: string(product.Metadata),
										})
									</div>
									</div>
							</div>
						</div>
						<div>
							<a href={ templ.URL(routes.ProductIndex.URL()) }>Cancel</a>
							<button type="submit">Update Product</button>
						</div>
					</form>
					<div>
						<button
							data-on:click={DataAction(http.MethodDelete, routes.ProductDestroy.URL(product.ID)) }>Destroy Product</button>
					</div>
				</div>
			</div>
		</div>
	}
}
