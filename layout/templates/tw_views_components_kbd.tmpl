package components

// --- Types ---

type KbdProps struct {
	Class      string
	Attributes templ.Attributes
}

// --- Class helpers ---

func kbdClasses(p KbdProps) string {
	base := "pointer-events-none inline-flex h-5 select-none items-center gap-1 rounded border border-base-300 bg-base-200 px-1.5 font-mono text-xs font-medium text-base-content/80"
	return cn(base, p.Class)
}

// --- Templ ---

templ Kbd(props ...KbdProps) {
	{{ "{{" }} var p KbdProps {{ "}}" }}
	if len(props) > 0 {
		{{ "{{" }} p = props[0] {{ "}}" }}
	}
	<kbd class={ kbdClasses(p) } { p.Attributes... }>
		{ children... }
	</kbd>
}
