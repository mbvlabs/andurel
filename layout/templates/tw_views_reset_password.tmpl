package views

import (
	"net/http"
	"{{.ModuleName}}/internal/hypermedia"
	"{{.ModuleName}}/router/routes"
)

templ ResetPasswordRequestForm() {
	@base() {
		<main class="auth-main flex items-center justify-center">
			<div class="auth-shell my-6">
				<div class="auth-card">
					<form class="space-y-5" data-indicator:submitting data-on:submit={ "!$submitting && " + hypermedia.DataAction(http.MethodPost, routes.PasswordCreate.URL()) }>
						<fieldset data-attr:disabled="$submitting">
							<div class="space-y-1">
								<h2 class="auth-title">Reset Password</h2>
								<p class="auth-subtitle">Enter your email address and we'll send you a code to reset your password.</p>
							</div>
							<div class="auth-fields">
								<div class="auth-field">
									<label class="field-label" for="email">Email</label>
									<input id="email" type="email" class="field-input" data-bind="email" required/>
								</div>
							</div>
							<button type="submit" class="auth-submit">
								<span data-show="!$submitting">Send Reset Code</span>
								<span data-show="$submitting">Loading</span>
							</button>
						</fieldset>
					</form>
					<p class="auth-links">
						Remember your password? <a class="inline-link" href={ routes.SessionNew.URL() }>Login</a>
					</p>
				</div>
			</div>
		</main>
	}
}

templ ResetPasswordForm(token string) {
	@base() {
		<main class="auth-main flex items-center justify-center">
			<div class="auth-shell my-6">
				<div class="auth-card">
					<form class="space-y-5" data-indicator:submitting data-on:submit={ "!$submitting && " + hypermedia.DataAction(http.MethodPut, routes.PasswordUpdate.URL()) }>
						<fieldset data-attr:disabled="$submitting">
							<input type="hidden" data-bind="resetPasswordToken" value={ token }/>
							<div class="space-y-1">
								<h2 class="auth-title">Reset Your Password</h2>
								<p class="auth-subtitle">Enter your new password below.</p>
							</div>
							<div class="auth-fields !my-4">
								<div class="auth-field">
									<label class="field-label" for="password">New Password</label>
									<input id="password" type="password" class="field-input" data-bind="password" required/>
								</div>
								<div class="auth-field">
									<label class="field-label" for="confirmPassword">Confirm New Password</label>
									<input id="confirmPassword" type="password" class="field-input" data-bind="confirmPassword" required/>
								</div>
							</div>
							<button type="submit" class="auth-submit">
								<span data-show="!$submitting">Reset Password</span>
								<span data-show="$submitting">Loading</span>
							</button>
						</fieldset>
					</form>
				</div>
			</div>
		</main>
	}
}
