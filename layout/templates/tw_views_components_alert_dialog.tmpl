package components

// --- Builder ---

type AlertDialogBuilder struct {
	id         string
	class      string
	attrs      templ.Attributes
	fragmentID string
}

func AlertDialog() *AlertDialogBuilder {
	return &AlertDialogBuilder{}
}

func (b *AlertDialogBuilder) WithID(id string) *AlertDialogBuilder     { b.id = id; return b }
func (b *AlertDialogBuilder) WithClass(c string) *AlertDialogBuilder   { b.class = cn(b.class, c); return b }
func (b *AlertDialogBuilder) SetClass(c string) *AlertDialogBuilder    { b.class = c; return b }
func (b *AlertDialogBuilder) WithAttr(key string, val any) *AlertDialogBuilder {
	if b.attrs == nil { b.attrs = templ.Attributes{} }
	b.attrs[key] = val; return b
}
func (b *AlertDialogBuilder) WithFragment(id string) *AlertDialogBuilder { b.fragmentID = id; return b }

// --- Class helpers ---

func alertDialogContentClasses(class string) string {
	return cn("fixed left-1/2 top-1/2 z-50 grid w-full max-w-lg -translate-x-1/2 -translate-y-1/2 gap-4 border border-base-300 bg-base-100 p-6 shadow-lg rounded-box", class)
}

func alertDialogHeaderClasses(class string) string {
	return cn("flex flex-col space-y-2 text-center sm:text-left", class)
}

func alertDialogTitleClasses(class string) string {
	return cn("text-lg font-semibold text-base-content", class)
}

func alertDialogDescriptionClasses(class string) string {
	return cn("text-sm text-base-content/60", class)
}

func alertDialogFooterClasses(class string) string {
	return cn("flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2", class)
}

func alertDialogActionClasses(class string) string {
	return cn("inline-flex items-center justify-center rounded-field bg-primary px-4 py-2 text-sm font-medium text-primary-content shadow-sm transition hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/50", class)
}

func alertDialogCancelClasses(class string) string {
	return cn("inline-flex items-center justify-center rounded-field border border-base-300 bg-transparent px-4 py-2 text-sm font-medium text-base-content shadow-sm transition hover:bg-base-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/50 mt-2 sm:mt-0", class)
}

// --- Templ ---

templ (b *AlertDialogBuilder) Render() {
	if b.fragmentID != "" {
		@templ.Fragment(b.fragmentID) {
			@b.render()
		}
	} else {
		@b.render()
	}
}

templ (b *AlertDialogBuilder) render() {
	<div
		class={ cn("relative", b.class) }
		if b.id != "" {
			id={ b.id }
		}
		if b.attrs != nil {
			{ b.attrs... }
		}
	>
		{ children... }
	</div>
}

templ AlertDialogContent(class string, attrs templ.Attributes) {
	<div class="fixed inset-0 z-50 bg-black/80"></div>
	<div class={ alertDialogContentClasses(class) } role="alertdialog" aria-modal="true" if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ AlertDialogHeader(class string, attrs templ.Attributes) {
	<div class={ alertDialogHeaderClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ AlertDialogTitle(class string, attrs templ.Attributes) {
	<h2 class={ alertDialogTitleClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</h2>
}

templ AlertDialogDescription(class string, attrs templ.Attributes) {
	<p class={ alertDialogDescriptionClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</p>
}

templ AlertDialogFooter(class string, attrs templ.Attributes) {
	<div class={ alertDialogFooterClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ AlertDialogAction(class string, attrs templ.Attributes) {
	<button type="button" class={ alertDialogActionClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</button>
}

templ AlertDialogCancel(class string, attrs templ.Attributes) {
	<button type="button" class={ alertDialogCancelClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</button>
}
