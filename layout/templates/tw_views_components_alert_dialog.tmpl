package components

// --- Class helpers ---

func alertDialogClasses(class string) string {
	return cn("relative", class)
}

func alertDialogContentClasses(class string) string {
	return cn("fixed left-1/2 top-1/2 z-50 grid w-full max-w-lg -translate-x-1/2 -translate-y-1/2 gap-4 border border-base-300 bg-base-100 p-6 shadow-lg rounded-box", class)
}

func alertDialogHeaderClasses(class string) string {
	return cn("flex flex-col space-y-2 text-center sm:text-left", class)
}

func alertDialogTitleClasses(class string) string {
	return cn("text-lg font-semibold text-base-content", class)
}

func alertDialogDescriptionClasses(class string) string {
	return cn("text-sm text-base-content/60", class)
}

func alertDialogFooterClasses(class string) string {
	return cn("flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2", class)
}

func alertDialogActionClasses(class string) string {
	return cn("inline-flex items-center justify-center rounded-field bg-primary px-4 py-2 text-sm font-medium text-primary-content shadow-sm transition hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/50", class)
}

func alertDialogCancelClasses(class string) string {
	return cn("inline-flex items-center justify-center rounded-field border border-base-300 bg-transparent px-4 py-2 text-sm font-medium text-base-content shadow-sm transition hover:bg-base-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/50 mt-2 sm:mt-0", class)
}

