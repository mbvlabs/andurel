templ AlertDialog(opts ...Opt) {
	<div class={ alertDialogClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ AlertDialogContent(opts ...Opt) {
	<div class="fixed inset-0 z-50 bg-black/80"></div>
	<div class={ alertDialogContentClasses(classFrom(opts)) } role="alertdialog" aria-modal="true" if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ AlertDialogHeader(opts ...Opt) {
	<div class={ alertDialogHeaderClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ AlertDialogTitle(title string, opts ...Opt) {
	<h2 class={ alertDialogTitleClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ title }
	</h2>
}

templ AlertDialogDescription(description string, opts ...Opt) {
	<p class={ alertDialogDescriptionClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ description }
	</p>
}

templ AlertDialogFooter(opts ...Opt) {
	<div class={ alertDialogFooterClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ AlertDialogAction(label string, opts ...Opt) {
	<button type="button" class={ alertDialogActionClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ label }
	</button>
}

templ AlertDialogCancel(label string, opts ...Opt) {
	<button type="button" class={ alertDialogCancelClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ label }
	</button>
}
