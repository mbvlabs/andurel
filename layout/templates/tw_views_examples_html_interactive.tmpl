<!--
Interactive: accordion, collapsible, aspect_ratio, carousel.
-->
<section class="space-y-6 rounded-box border border-base-300 bg-base-100 p-6" data-signals:accordion="false,collapsed=false,slide=0">
  <header class="space-y-1">
    <h2 class="text-xl font-semibold">Interactive Components</h2>
  </header>

  <div class="accordion">
    <div class="accordion-item">
      <button type="button" class="accordion-trigger" data-on:click="$accordion = !$accordion">
        What is Andurel?
        <span>⌄</span>
      </button>
      <div class="accordion-content" data-show="$accordion">Andurel is a Rails-like framework for Go.</div>
    </div>
  </div>

  <div class="collapsible">
    <button type="button" class="collapsible-trigger" data-on:click="$collapsed = !$collapsed">
      Toggle Details
      <span>⌄</span>
    </button>
    <div class="collapsible-content" data-show="$collapsed">This section expands and collapses with Datastar state.</div>
  </div>

  <div class="aspect-ratio">
    <div class="aspect-ratio-content">16:9 media area</div>
  </div>

  <div class="carousel">
    <div class="carousel-track" data-attr:style="'transform: translateX(-' + ($slide * 100) + '%)'">
      <div class="carousel-item"><div class="rounded-box bg-base-200 p-4">Slide 1</div></div>
      <div class="carousel-item"><div class="rounded-box bg-base-200 p-4">Slide 2</div></div>
      <div class="carousel-item"><div class="rounded-box bg-base-200 p-4">Slide 3</div></div>
    </div>

    <div class="carousel-nav">
      <button type="button" class="carousel-dot" data-attr:data-active="$slide == 0 ? 'true' : null" data-on:click="$slide = 0"></button>
      <button type="button" class="carousel-dot" data-attr:data-active="$slide == 1 ? 'true' : null" data-on:click="$slide = 1"></button>
      <button type="button" class="carousel-dot" data-attr:data-active="$slide == 2 ? 'true' : null" data-on:click="$slide = 2"></button>
    </div>
  </div>
</section>
