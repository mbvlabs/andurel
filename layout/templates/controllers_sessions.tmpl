package controllers

import (
	"log/slog"
	"net/http"

	"{{.ModuleName}}/config"
	"{{.ModuleName}}/internal/storage"
	"{{.ModuleName}}/router/cookies"
	"{{.ModuleName}}/router/routes"
	"{{.ModuleName}}/services"
	"{{.ModuleName}}/views"

	"github.com/labstack/echo/v4"
	"github.com/starfederation/datastar-go/datastar"
)

type Sessions struct {
	db  storage.Pool
	cfg config.Config
}

func NewSessions(db storage.Pool, cfg config.Config) Sessions {
	return Sessions{db, cfg}
}

func (s Sessions) New(eCtx echo.Context) error {
	return render(eCtx, views.LoginForm())
}

func (s Sessions) Create(eCtx echo.Context) error {
	var payload struct {
		Email    string `json:"email"`
		Password string `json:"password"`
	}

	if err := eCtx.Bind(&payload); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"could not parse login form payload",
			"error",
			err,
		)
		return render(eCtx, views.BadRequest())
	}

	user, err := services.AuthenticateUser(
		eCtx.Request().Context(),
		s.db,
		s.cfg.Auth.Pepper,
		services.LoginData{
			Email:    payload.Email,
			Password: payload.Password,
		},
	)
	if err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"failed to authenticate user",
			"error",
			err,
		)

		var errorMsg string
		switch err {
		case services.ErrInvalidCredentials:
			errorMsg = "Invalid email or password"
		case services.ErrEmailNotVerified:
			errorMsg = "Please verify your email before logging in"
		default:
			errorMsg = "Failed to log in"
		}

		if flashErr := cookies.AddFlash(eCtx, cookies.FlashError, errorMsg); flashErr != nil {
			return render(eCtx, views.InternalError())
		}

		return eCtx.Redirect(http.StatusSeeOther, routes.SessionNew.URL())
	}

	if err := cookies.CreateAppSession(eCtx, user); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"failed to create session",
			"error",
			err,
		)

		return render(eCtx, views.InternalError())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Successfully logged in!"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return datastar.NewSSE(eCtx.Response(), eCtx.Request()).Redirect(routes.HomePage.URL())
}

func (s Sessions) Destroy(eCtx echo.Context) error {
	if err := cookies.DestroyAppSession(eCtx); err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"failed to destroy session",
			"error",
			err,
		)
		return render(eCtx, views.InternalError())
	}

	if flashErr := cookies.AddFlash(eCtx, cookies.FlashSuccess, "Successfully logged out!"); flashErr != nil {
		return render(eCtx, views.InternalError())
	}

	return eCtx.Redirect(http.StatusSeeOther, routes.SessionNew.URL())
}
