	"{{.ModuleName}}/database"
{{- else if eq .Database "sqlite"}}
	"{{.ModuleName}}/database"
{{- end}}
	"{{.ModuleName}}/router/cookies"
{{if .WithAuth}}
	"{{.ModuleName}}/services"
