package components

// --- Types ---

type SheetSide string

const (
	SheetSideLeft   SheetSide = "left"
	SheetSideRight  SheetSide = "right"
	SheetSideTop    SheetSide = "top"
	SheetSideBottom SheetSide = "bottom"
)

// --- Class helpers ---

func sheetClasses(class string) string {
	return cn("relative", class)
}

func sheetContentSideClasses(s SheetSide) string {
	switch s {
	case SheetSideLeft:
		return "inset-y-0 left-0 h-full w-3/4 max-w-sm border-r border-base-300"
	case SheetSideTop:
		return "inset-x-0 top-0 w-full border-b border-base-300"
	case SheetSideBottom:
		return "inset-x-0 bottom-0 w-full border-t border-base-300"
	default:
		return "inset-y-0 right-0 h-full w-3/4 max-w-sm border-l border-base-300"
	}
}

func sheetContentClasses(side SheetSide, class string) string {
	base := "fixed z-50 gap-4 bg-base-100 p-6 shadow-lg"
	return cn(base, sheetContentSideClasses(side), class)
}

func sheetHeaderClasses(class string) string {
	return cn("flex flex-col space-y-2 text-center sm:text-left", class)
}

func sheetTitleClasses(class string) string {
	return cn("text-lg font-semibold text-base-content", class)
}

func sheetDescriptionClasses(class string) string {
	return cn("text-sm text-base-content/60", class)
}

func sheetFooterClasses(class string) string {
	return cn("flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2", class)
}

func sheetCloseClasses(class string) string {
	return cn("absolute right-4 top-4 rounded-field opacity-70 transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-primary/50 cursor-pointer", class)
}

// --- Templ ---

// Sheet creates a panel that slides in from the edge of the screen. Use it for navigation
// drawers, settings panels, or detail views that don't warrant a full page. Compose with
// SheetContent (with side), SheetHeader, SheetTitle, SheetDescription, SheetFooter, and
// SheetClose sub-components.
// Sides: SheetSideLeft, SheetSideRight (default), SheetSideTop, SheetSideBottom.
//
//	@components.Sheet() {
//		@components.SheetContent(components.SheetSideRight) {
//			@components.SheetHeader() {
//				@components.SheetTitle("Settings")
//				@components.SheetDescription("Adjust your preferences.")
//			}
//			<p>Sheet body</p>
//			@components.SheetClose()
//		}
//	}
templ Sheet(opts ...Opt) {
	<div class={ sheetClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ SheetContent(side SheetSide, opts ...Opt) {
	<div class="fixed inset-0 z-50 bg-black/80"></div>
	<div class={ sheetContentClasses(side, classFrom(opts)) } role="dialog" aria-modal="true" if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ SheetHeader(opts ...Opt) {
	<div class={ sheetHeaderClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ SheetTitle(title string, opts ...Opt) {
	<h2 class={ sheetTitleClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ title }
	</h2>
}

templ SheetDescription(description string, opts ...Opt) {
	<p class={ sheetDescriptionClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ description }
	</p>
}

templ SheetFooter(opts ...Opt) {
	<div class={ sheetFooterClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ SheetClose(opts ...Opt) {
	<button type="button" class={ sheetCloseClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
		<span class="sr-only">Close</span>
	</button>
}
