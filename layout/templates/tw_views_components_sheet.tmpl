package components

// --- Types ---

type SheetSide string

const (
	SheetSideLeft   SheetSide = "left"
	SheetSideRight  SheetSide = "right"
	SheetSideTop    SheetSide = "top"
	SheetSideBottom SheetSide = "bottom"
)

// --- Builder ---

type SheetBuilder struct {
	id         string
	class      string
	attrs      templ.Attributes
	fragmentID string
}

func Sheet() *SheetBuilder {
	return &SheetBuilder{}
}

func (b *SheetBuilder) WithID(id string) *SheetBuilder     { b.id = id; return b }
func (b *SheetBuilder) WithClass(c string) *SheetBuilder   { b.class = cn(b.class, c); return b }
func (b *SheetBuilder) SetClass(c string) *SheetBuilder    { b.class = c; return b }
func (b *SheetBuilder) WithAttr(key string, val any) *SheetBuilder {
	if b.attrs == nil { b.attrs = templ.Attributes{} }
	b.attrs[key] = val; return b
}
func (b *SheetBuilder) WithFragment(id string) *SheetBuilder { b.fragmentID = id; return b }

// --- Class helpers ---

func sheetContentSideClasses(s SheetSide) string {
	switch s {
	case SheetSideLeft:
		return "inset-y-0 left-0 h-full w-3/4 max-w-sm border-r border-base-300"
	case SheetSideTop:
		return "inset-x-0 top-0 w-full border-b border-base-300"
	case SheetSideBottom:
		return "inset-x-0 bottom-0 w-full border-t border-base-300"
	default:
		return "inset-y-0 right-0 h-full w-3/4 max-w-sm border-l border-base-300"
	}
}

func sheetContentClasses(side SheetSide, class string) string {
	base := "fixed z-50 gap-4 bg-base-100 p-6 shadow-lg"
	return cn(base, sheetContentSideClasses(side), class)
}

func sheetHeaderClasses(class string) string {
	return cn("flex flex-col space-y-2 text-center sm:text-left", class)
}

func sheetTitleClasses(class string) string {
	return cn("text-lg font-semibold text-base-content", class)
}

func sheetDescriptionClasses(class string) string {
	return cn("text-sm text-base-content/60", class)
}

func sheetFooterClasses(class string) string {
	return cn("flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2", class)
}

func sheetCloseClasses(class string) string {
	return cn("absolute right-4 top-4 rounded-field opacity-70 transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-primary/50 cursor-pointer", class)
}

// --- Templ ---

templ (b *SheetBuilder) Render() {
	if b.fragmentID != "" {
		@templ.Fragment(b.fragmentID) {
			@b.render()
		}
	} else {
		@b.render()
	}
}

templ (b *SheetBuilder) render() {
	<div
		class={ cn("relative", b.class) }
		if b.id != "" {
			id={ b.id }
		}
		if b.attrs != nil {
			{ b.attrs... }
		}
	>
		{ children... }
	</div>
}

templ SheetContent(side SheetSide, class string, attrs templ.Attributes) {
	<div class="fixed inset-0 z-50 bg-black/80"></div>
	<div class={ sheetContentClasses(side, class) } role="dialog" aria-modal="true" if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ SheetHeader(class string, attrs templ.Attributes) {
	<div class={ sheetHeaderClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ SheetTitle(class string, attrs templ.Attributes) {
	<h2 class={ sheetTitleClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</h2>
}

templ SheetDescription(class string, attrs templ.Attributes) {
	<p class={ sheetDescriptionClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</p>
}

templ SheetFooter(class string, attrs templ.Attributes) {
	<div class={ sheetFooterClasses(class) } if attrs != nil { { attrs... } }>
		{ children... }
	</div>
}

templ SheetClose(class string, attrs templ.Attributes) {
	<button type="button" class={ sheetCloseClasses(class) } if attrs != nil { { attrs... } }>
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
		<span class="sr-only">Close</span>
	</button>
}
