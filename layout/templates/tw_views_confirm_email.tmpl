package views

import (
	"net/http"
	"{{.ModuleName}}/internal/hypermedia"
	"{{.ModuleName}}/router/routes"
	"{{.ModuleName}}/views/components"
)

templ ConfirmationForm() {
	@base() {
		<main class="flex-1 px-6 py-10">
			<div class="mx-auto flex w-full max-w-md flex-col gap-6">
				<div class="rounded-box border border-base-300 bg-base-100 p-8 shadow-lg">
					<form
						class="space-y-5"
						data-indicator:submitting
						data-on:submit={ "!$submitting &&" + hypermedia.DataAction(http.MethodPost, routes.ConfirmationCreate.URL()) }
					>
						<div class="space-y-1">
							<h2 class="text-xl font-semibold text-base-content">Verify Your Email</h2>
							<p class="text-sm text-base-content/60">Please enter the 6-digit verification code sent to your email.</p>
						</div>
						<div class="space-y-4">
							@components.InputField("Verification Code", "code", "text", "Enter 6-digit code", true, components.FieldProp{})
						</div>
						@components.SubmitButton("Verify Email")
					</form>
				</div>
			</div>
		</main>
	}
}
