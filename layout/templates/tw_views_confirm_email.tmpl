package views

import (
	"net/http"
	"{{.ModuleName}}/internal/hypermedia"
	"{{.ModuleName}}/router/routes"
)

templ ConfirmationForm() {
	@base() {
		<main class="flex flex-1 items-center justify-center px-6 py-10">
			<div class="mx-auto my-6 flex w-full max-w-md flex-col gap-6">
				<div class="card p-8 shadow-lg">
					<form class="form" data-indicator:submitting data-on:submit={ "!$submitting && " + hypermedia.DataAction(http.MethodPost, routes.ConfirmationCreate.URL()) }>
						<fieldset data-attr:disabled="$submitting">
							<div class="space-y-1">
								<h2 class="text-xl font-semibold text-base-content">Verify Your Email</h2>
								<p class="text-sm text-base-content/60">Please enter the 6-digit verification code sent to your email.</p>
							</div>
							<div class="my-6 space-y-4">
								<div class="form-row">
									<label class="label" for="code">Verification Code</label>
									<input id="code" type="text" maxlength="6" class="input input-otp" data-bind="code" required/>
								</div>
							</div>
							<button type="submit" class="btn btn-primary w-full">
								<span data-show="!$submitting">Verify Email</span>
								<span data-show="$submitting">Loading</span>
							</button>
						</fieldset>
					</form>
				</div>
			</div>
		</main>
	}
}
