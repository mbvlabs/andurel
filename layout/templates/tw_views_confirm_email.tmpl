package views

import (
	"net/http"
	"{{.ModuleName}}/internal/hypermedia"
	"{{.ModuleName}}/router/routes"
)

templ ConfirmationForm() {
	@base() {
		<main class="auth-main flex items-center justify-center">
			<div class="auth-shell my-6">
				<div class="auth-card">
					<form class="space-y-5" data-indicator:submitting data-on:submit={ "!$submitting && " + hypermedia.DataAction(http.MethodPost, routes.ConfirmationCreate.URL()) }>
						<fieldset data-attr:disabled="$submitting">
							<div class="space-y-1">
								<h2 class="auth-title">Verify Your Email</h2>
								<p class="auth-subtitle">Please enter the 6-digit verification code sent to your email.</p>
							</div>
							<div class="auth-fields">
								<div class="auth-field">
									<label class="field-label" for="code">Verification Code</label>
									<input id="code" type="text" maxlength="6" class="field-input field-input-otp" data-bind="code" required/>
								</div>
							</div>
							<button type="submit" class="auth-submit">
								<span data-show="!$submitting">Verify Email</span>
								<span data-show="$submitting">Loading</span>
							</button>
						</fieldset>
					</form>
				</div>
			</div>
		</main>
	}
}
