package auth

import "{{.ModuleName}}/views/layout"

templ ResetPassword(token string) {
	@layout.Base() {
		<div class="container mx-auto max-w-md mt-8 px-4">
			<h1 class="text-3xl font-bold mb-6">Reset Password</h1>
			<form method="POST" action="/reset-password" data-on-submit="$$post('/reset-password')">
				<input type="hidden" name="token" value={ token }/>
				<div class="form-control mb-4">
					<label class="label" for="password">
						<span class="label-text">New Password</span>
					</label>
					<input type="password" name="password" id="password" class="input input-bordered w-full" required minlength="8"/>
				</div>
				<div class="form-control mb-4">
					<label class="label" for="password_confirm">
						<span class="label-text">Confirm Password</span>
					</label>
					<input type="password" name="password_confirm" id="password_confirm" class="input input-bordered w-full" required minlength="8"/>
				</div>
				<div id="resetRes" class="mb-4"></div>
				<button type="submit" class="btn btn-primary w-full">Reset Password</button>
			</form>
		</div>
	}
}