package router

import (
	"errors"
	"net/http"

	"{{.ModuleName}}/controllers"
	"{{.ModuleName}}/router/routes"

	"github.com/labstack/echo/v5"
)

func registerAPIRoutes(handler *echo.Echo, apiController controllers.API) error {
	errs := []error{}

	_, err := handler.AddRoute(echo.Route{
		Method:  http.MethodGet,
		Path:    routes.Health.Path(),
		Name:    routes.Health.Name(),
		Handler: apiController.Health,
	})
	if err != nil {
		errs = append(errs, err)
	}

	return errors.Join(errs...)
}
