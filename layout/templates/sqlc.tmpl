version: "2"
sql:
  - schema: migrations
    queries: queries
{{- if eq .Database "postgresql"}}
    engine: postgresql
{{- end}}
    gen:
      go:
        package: db
        out: ../models/internal/db
        output_db_file_name: db.go
        output_models_file_name: entities.go
        emit_methods_with_db_argument: true
	{{- if eq .Database "postgresql"}}
        sql_package: pgx/v5
        overrides:
          - db_type: uuid
            go_type: github.com/google/uuid.UUID
	{{- end}}
