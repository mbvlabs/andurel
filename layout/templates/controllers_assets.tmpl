const threeMonthsCache = "7776000"

type Assets struct {
	cache *Cache[string]
}

func NewAssets(cache *Cache[string]) Assets {
	return Assets{cache}
}

func (a Assets) enableCaching(eCtx echo.Context, content []byte) echo.Context {
	if config.Env == server.ProdEnvironment {
		//nolint:gosec //only needed for browser caching
		hash := md5.Sum(content)
		etag := fmt.Sprintf(`"%x-%x"`, hash, len(content))

		if match := eCtx.Request().Header.Get("If-None-Match"); match == etag {
			eCtx.Response().
				Header().
				Set("Cache-Control", fmt.Sprintf("public, max-age=%s, immutable", threeMonthsCache))
			eCtx.Response().
				Header().
				Set("ETag", etag)
			eCtx.NoContent(http.StatusNotModified)
			return eCtx
		}

		eCtx.Response().
			Header().
			Set("Cache-Control", fmt.Sprintf("public, max-age=%s, immutable", threeMonthsCache))
		eCtx.Response().
			Header().
			Set("Vary", "Accept-Encoding")
		eCtx.Response().
			Header().
			Set("ETag", etag)
	}

	return eCtx
}

func createRobotsTxt() (string, error) {
	type robotsTxt struct {
		UserAgent string `yaml:"User-agent"`
		Allow     string `yaml:"Allow"`
		Sitemap   string `yaml:"Sitemap"`
	}

	robots, err := yaml.Marshal(robotsTxt{
		UserAgent: "*",
		Allow:     "/",
		Sitemap: fmt.Sprintf(
			"%s%s",
			config.BaseURL,
			routes.Sitemap.URL(),
		),
	})
	if err != nil {
		return "", err
	}

	return string(robots), nil
}


func (a Assets) Robots(eCtx echo.Context) error {
	cacheKey := "assets:robots"

	robotsTxt, err := a.cache.Get(cacheKey, func() (string, error) {
		return createRobotsTxt()
	})
	if err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"failed to get robots.txt from cache",
			"error", err,
		)
		result, _ := createRobotsTxt()
		return eCtx.String(http.StatusOK, result)
	}

	return eCtx.String(http.StatusOK, robotsTxt)
}

func (a Assets) Sitemap(eCtx echo.Context) error {
	cacheKey := "assets:sitemap"

	sitemap, err := a.cache.Get(cacheKey, func() (string, error) {
		return createSitemap([]routing.Route{})
	})
	if err != nil {
		slog.ErrorContext(
			eCtx.Request().Context(),
			"failed to get sitemap from cache",
			"error", err,
		)

		result, err := createSitemap([]routing.Route{})
		if err != nil {
			return err
		}

		return eCtx.Blob(http.StatusOK, "application/xml", []byte(result))
	}

	return eCtx.Blob(http.StatusOK, "application/xml", []byte(sitemap))
}

type URL struct {
	XMLName    xml.Name `xml:"url"`
	Loc        string   `xml:"loc"`
	ChangeFreq string   `xml:"changefreq"`
	LastMod    string   `xml:"lastmod,omitempty"`
	Priority   string   `xml:"priority,omitempty"`
}

type Sitemap struct {
	XMLName xml.Name `xml:"urlset"`
	XMLNS   string   `xml:"xmlns,attr"`
	URL     []URL    `xml:"url"`
}

func createSitemap(routes []routing.Route) (string, error) {
	baseURL := config.BaseURL

	var urls []URL

	urls = append(urls, URL{
		Loc:        baseURL,
		ChangeFreq: "monthly",
		LastMod:    "2024-10-22T09:43:09+00:00",
		Priority:   "1",
	})

	sitemap := Sitemap{
		XMLNS: "http://www.sitemaps.org/schemas/sitemap/0.9",
		URL:   urls,
	}

	xmlBytes, err := xml.MarshalIndent(sitemap, "", "  ")
    if err != nil {
    	return "", err
    }

    return xml.Header + string(xmlBytes), nil
}

func (a Assets) Stylesheet(eCtx echo.Context) error {
	stylesheet, err := assets.Files.ReadFile(
		"css/style.css",
	)
	if err != nil {
		return err
	}

	eCtx = a.enableCaching(eCtx, stylesheet)
	return eCtx.Blob(http.StatusOK, "text/css", stylesheet)
}

