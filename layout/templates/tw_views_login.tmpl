package views

import (
	"net/http"
	"{{.ModuleName}}/internal/hypermedia"
	"{{.ModuleName}}/router/routes"
)

templ LoginForm() {
	@base() {
		<main class="auth-main flex items-center justify-center">
			<div class="auth-shell">
				<div class="auth-card">
					<form class="space-y-5" data-indicator:submitting data-on:submit={ "!$submitting && " + hypermedia.DataAction(http.MethodPost, routes.SessionCreate.URL()) }>
						<fieldset data-attr:disabled="$submitting">
							<div class="space-y-1">
								<h2 class="auth-title">Login to your account</h2>
								<p class="auth-subtitle">Enter your details below to login to your account</p>
							</div>
							<div class="auth-fields">
								<div class="auth-field">
									<label class="field-label" for="email">Email</label>
									<input id="email" type="email" class="field-input" data-bind="email" required/>
								</div>
								<div class="auth-field">
									<label class="field-label" for="password">Password</label>
									<input id="password" type="password" class="field-input" data-bind="password" required/>
								</div>
							</div>
							<p class="mb-1 text-right text-sm">
								<a class="inline-link" href={ routes.PasswordNew.URL() }>Forgot your password?</a>
							</p>
							<button type="submit" class="auth-submit">
								<span data-show="!$submitting">Login</span>
								<span data-show="$submitting">Loading</span>
							</button>
						</fieldset>
					</form>
					<p class="auth-links">
						Don't have an account? <a class="inline-link" href={ routes.RegistrationNew.URL() }>Sign up</a>
					</p>
				</div>
			</div>
		</main>
	}
}
