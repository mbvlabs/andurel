package controllers

import (
	"{{.ModuleName}}/internal/storage"
	"net/http"

	"github.com/labstack/echo/v4"
)

type API struct {
	db storage.Pool
}

func NewAPI(db storage.Pool) API {
	return API{db}
}

func (a API) Health(eCtx echo.Context) error {
	return eCtx.JSON(http.StatusOK, "app is healthy and running")
}
