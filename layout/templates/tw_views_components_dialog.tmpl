package components

// --- Builder ---

type DialogBuilder struct {
	id         string
	class      string
	attrs      templ.Attributes
	fragmentID string
}

// Dialog creates a modal overlay for displaying content that requires user attention or
// interaction (forms, confirmations, details). Compose with DialogContent, DialogHeader,
// DialogTitle, DialogDescription, DialogFooter, and DialogClose sub-components.
// For destructive confirmation prompts, prefer AlertDialog instead.
//
//	@components.Dialog().Render() {
//		@components.DialogContent() {
//			@components.DialogHeader() {
//				@components.DialogTitle("Edit Profile")
//				@components.DialogDescription("Make changes to your profile.")
//			}
//			<p>Dialog body content</p>
//			@components.DialogFooter() { ... }
//			@components.DialogClose()
//		}
//	}
func Dialog() *DialogBuilder {
	return &DialogBuilder{}
}

func (b *DialogBuilder) WithID(id string) *DialogBuilder     { b.id = id; return b }
func (b *DialogBuilder) WithClass(c string) *DialogBuilder   { b.class = cn(b.class, c); return b }
func (b *DialogBuilder) SetClass(c string) *DialogBuilder    { b.class = c; return b }
func (b *DialogBuilder) WithAttr(key string, val any) *DialogBuilder {
	if b.attrs == nil { b.attrs = templ.Attributes{} }
	b.attrs[key] = val; return b
}
func (b *DialogBuilder) WithFragment(id string) *DialogBuilder { b.fragmentID = id; return b }

// --- Class helpers ---

func dialogOverlayClasses() string {
	return "fixed inset-0 z-50 bg-black/80"
}

func dialogContentClasses(class string) string {
	return cn("fixed left-1/2 top-1/2 z-50 grid w-full max-w-lg -translate-x-1/2 -translate-y-1/2 gap-4 border border-base-300 bg-base-100 p-6 shadow-lg rounded-box", class)
}

func dialogHeaderClasses(class string) string {
	return cn("flex flex-col space-y-1.5 text-center sm:text-left", class)
}

func dialogTitleClasses(class string) string {
	return cn("text-lg font-semibold leading-none tracking-tight text-base-content", class)
}

func dialogDescriptionClasses(class string) string {
	return cn("text-sm text-base-content/60", class)
}

func dialogFooterClasses(class string) string {
	return cn("flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2", class)
}

func dialogCloseClasses(class string) string {
	return cn("absolute right-4 top-4 rounded-field opacity-70 transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-primary/50 cursor-pointer", class)
}

// --- Templ ---

templ (b *DialogBuilder) Render() {
	if b.fragmentID != "" {
		@templ.Fragment(b.fragmentID) {
			@b.render()
		}
	} else {
		@b.render()
	}
}

templ (b *DialogBuilder) render() {
	<div
		class={ cn("relative", b.class) }
		if b.id != "" {
			id={ b.id }
		}
		if b.attrs != nil {
			{ b.attrs... }
		}
	>
		{ children... }
	</div>
}

templ DialogContent(opts ...Opt) {
	<div class={ dialogOverlayClasses() }></div>
	<div class={ dialogContentClasses(classFrom(opts)) } role="dialog" aria-modal="true" if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ DialogHeader(opts ...Opt) {
	<div class={ dialogHeaderClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ DialogTitle(title string, opts ...Opt) {
	<h2 class={ dialogTitleClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ title }
	</h2>
}

templ DialogDescription(description string, opts ...Opt) {
	<p class={ dialogDescriptionClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ description }
	</p>
}

templ DialogFooter(opts ...Opt) {
	<div class={ dialogFooterClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		{ children... }
	</div>
}

templ DialogClose(opts ...Opt) {
	<button type="button" class={ dialogCloseClasses(classFrom(opts)) } if attrsFrom(opts) != nil { { attrsFrom(opts)... } }>
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
		<span class="sr-only">Close</span>
	</button>
}
