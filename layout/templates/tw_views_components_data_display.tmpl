package components

// Avatar component - circular user image with fallback initials.
templ Avatar(name, imageURL, fallback string) {
	<div class="inline-flex h-10 w-10 items-center justify-center overflow-hidden rounded-full bg-base-200 text-sm font-semibold text-base-content">
		if imageURL != "" {
			<img
				src={ imageURL }
				alt={ name }
				class="h-full w-full object-cover"
			/>
		} else {
			<span>{ fallback }</span>
		}
	</div>
}

// Badge component - compact status label.
templ Badge(label string) {
	<span class="inline-flex items-center rounded-full bg-base-200 px-2.5 py-0.5 text-xs font-semibold text-base-content">
		{ label }
	</span>
}

// Card component - bordered container with title and body content.
templ Card(title, body, footer string) {
	<div class="rounded-lg border border-base-300 bg-base-100 p-6 shadow-sm">
		<h3 class="text-base font-semibold text-base-content">{ title }</h3>
		<p class="mt-2 text-sm text-base-content/70">{ body }</p>
		if footer != "" {
			<div class="mt-4 text-sm text-base-content/60">{ footer }</div>
		}
	</div>
}

// Divider component - horizontal separator with optional label.
templ Divider(label string) {
	<div class="flex items-center gap-3">
		<div class="h-px flex-1 bg-base-300"></div>
		if label != "" {
			<span class="text-xs font-medium uppercase tracking-wide text-base-content/60">{ label }</span>
			<div class="h-px flex-1 bg-base-300"></div>
		}
	</div>
}

// Stat component - labeled value for dashboards.
templ Stat(label, value string) {
	<div class="rounded-lg border border-base-300 bg-base-100 p-4">
		<p class="text-xs uppercase tracking-wide text-base-content/60">{ label }</p>
		<p class="mt-2 text-2xl font-semibold text-base-content">{ value }</p>
	</div>
}

// Table component - simple data table with headers and rows.
templ Table(headers []string, rows [][]string) {
	<div class="overflow-x-auto rounded-lg border border-base-300">
		<table class="min-w-full divide-y divide-base-300 text-sm">
			<thead class="bg-base-200/60">
				<tr>
					for _, header := range headers {
						<th class="px-4 py-3 text-left font-semibold text-base-content">{ header }</th>
					}
				</tr>
			</thead>
			<tbody class="divide-y divide-base-300">
				for _, row := range rows {
					<tr class="bg-base-100">
						for _, cell := range row {
							<td class="px-4 py-3 text-base-content/80">{ cell }</td>
						}
					</tr>
				}
			</tbody>
		</table>
	</div>
}

// ItemList component - stacked list items with subtle dividers.
templ ItemList(items []string) {
	<ul class="divide-y divide-base-300 rounded-lg border border-base-300 bg-base-100">
		for _, item := range items {
			<li class="px-4 py-3 text-sm text-base-content">{ item }</li>
		}
	</ul>
}
