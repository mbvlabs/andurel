package components

import (
	"fmt"
	"{{.ModuleName}}/router/routes"
)

templ QueueActions() {
	<button
		data-on-click={ fmt.Sprintf("@post('%s', {ids: $selectedJobs})", routes.QueueJobCancel.URL()) }
		class="btn btn-sm btn-warning"
	>
		Cancel Selected
	</button>
	<button
		data-on-click={ fmt.Sprintf("@post('%s', {ids: $selectedJobs})", routes.QueueJobRetry.URL()) }
		class="btn btn-sm btn-primary"
	>
		Retry Selected
	</button>
	<button
		data-on-click={ fmt.Sprintf("@post('%s', {ids: $selectedJobs})", routes.QueueJobDelete.URL()) }
		class="btn btn-sm btn-error"
	>
		Delete Selected
	</button>
}
