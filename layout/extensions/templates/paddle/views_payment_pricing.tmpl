package views

import "{{.ModuleName}}/models"

{{- if eq .Css "tailwind" }}
templ PaymentPricing(products []models.PaymentProduct) {
	@base() {
		<main class="container mx-auto px-4 py-8">
			<div class="max-w-6xl mx-auto">
				<h1 class="text-4xl font-bold text-center mb-4">Pricing</h1>
				<p class="text-center text-gray-600 mb-12">Choose the perfect plan for your needs</p>

				if len(products) == 0 {
					<div class="text-center py-12">
						<p class="text-gray-500 text-lg">No products available at the moment.</p>
					</div>
				} else {
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						for _, product := range products {
							<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
								if product.ImageURL != "" {
									<img src={ product.ImageURL } alt={ product.Name } class="w-full h-48 object-cover"/>
								}
								<div class="p-6">
									<h3 class="text-2xl font-bold mb-2">{ product.Name }</h3>
									if product.Description != "" {
										<p class="text-gray-600 mb-4">{ product.Description }</p>
									}
									<div class="mb-6">
										<span class="text-3xl font-bold">{ product.PriceAmount }</span>
										<span class="text-gray-500 ml-1">{ product.PriceCurrency }</span>
									</div>
									<button
										class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200"
										onclick={ templ.ComponentScript{Call: "buyProduct('" + product.ProviderPriceID + "')"} }
									>
										Purchase
									</button>
								</div>
							</div>
						}
					</div>
				}
			</div>
		</main>
		<script>
			function buyProduct(priceId) {
				window.location.href = '/billing/checkout?price_id=' + priceId;
			}
		</script>
	}
}
{{- else }}
templ PaymentPricing(products []models.PaymentProduct) {
	@base() {
		<main>
			<div class="container">
				<h1 style="text-align: center;">Pricing</h1>
				<p style="text-align: center; color: var(--gray-6); margin-bottom: var(--size-8);">
					Choose the perfect plan for your needs
				</p>

				if len(products) == 0 {
					<div style="text-align: center; padding: var(--size-12) 0;">
						<p style="color: var(--gray-6); font-size: var(--font-size-3);">
							No products available at the moment.
						</p>
					</div>
				} else {
					<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: var(--size-6);">
						for _, product := range products {
							<div class="card" style="overflow: hidden;">
								if product.ImageURL != "" {
									<img
										src={ product.ImageURL }
										alt={ product.Name }
										style="width: 100%; height: 200px; object-fit: cover;"
									/>
								}
								<div style="padding: var(--size-5);">
									<h3 style="margin-bottom: var(--size-2);">{ product.Name }</h3>
									if product.Description != "" {
										<p style="color: var(--gray-6); margin-bottom: var(--size-4);">
											{ product.Description }
										</p>
									}
									<div style="margin-bottom: var(--size-6);">
										<span style="font-size: var(--font-size-6); font-weight: bold;">
											{ product.PriceAmount }
										</span>
										<span style="color: var(--gray-6); margin-left: var(--size-1);">
											{ product.PriceCurrency }
										</span>
									</div>
									<button
										class="button"
										style="width: 100%;"
										onclick={ templ.ComponentScript{Call: "buyProduct('" + product.ProviderPriceID + "')"} }
									>
										Purchase
									</button>
								</div>
							</div>
						}
					</div>
				}
			</div>
		</main>
		<script>
			function buyProduct(priceId) {
				window.location.href = '/billing/checkout?price_id=' + priceId;
			}
		</script>
	}
}
{{- end }}
