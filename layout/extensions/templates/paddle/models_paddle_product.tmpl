		ID:              id,
		CreatedAt:       row.CreatedAt,
		UpdatedAt:       row.UpdatedAt,
		PaddleProductID: row.PaddleProductID,
		PaddlePriceID:   row.PaddlePriceID,
		Name:            row.Name,
