{{- if eq .Database "postgresql" }}
type PaymentAccount struct {
	db     database.Postgres
	client *payment.PaddleClient
}

func newPaymentAccount(db database.Postgres, client *payment.PaddleClient) PaymentAccount {
	return PaymentAccount{db, client}
}
{{- else if eq .Database "sqlite" }}
type PaymentAccount struct {
	db     database.SQLite
	client *payment.PaddleClient
}

func newPaymentAccount(db database.SQLite, client *payment.PaddleClient) PaymentAccount {
	return PaymentAccount{db, client}
}
{{- end }}

