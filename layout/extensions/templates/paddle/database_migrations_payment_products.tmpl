-- +goose StatementBegin
CREATE TABLE IF NOT EXISTS payment_products (
    id uuid PRIMARY KEY DEFAULT gen_random_uuid(),
    created_at TIMESTAMP WITH TIME ZONE NOT NULL DEFAULT NOW(),
    updated_at TIMESTAMP WITH TIME ZONE NOT NULL DEFAULT NOW(),
    provider_product_id VARCHAR(255) NOT NULL UNIQUE,
    provider_price_id VARCHAR(255) NOT NULL,
    name VARCHAR(255) NOT NULL,
    description TEXT,
    price_amount VARCHAR(50) NOT NULL,
    price_currency VARCHAR(3) NOT NULL,
    image_url TEXT,
    is_active BOOLEAN NOT NULL DEFAULT true
);

CREATE INDEX idx_payment_products_provider_product_id ON payment_products(provider_product_id);
CREATE INDEX idx_payment_products_is_active ON payment_products(is_active);
-- +goose StatementEnd

