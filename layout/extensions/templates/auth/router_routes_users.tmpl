package routes

import "net/http"

const (
	usersRoutePrefix = "/users"
	usersNamePrefix  = "users"
)

var usersGroup = NewRouteGroup(usersNamePrefix, usersRoutePrefix)

var SessionNew = usersGroup.Route("new_user_session").
	SetPath("/sign_in").
	SetMethod(http.MethodGet).
	SetCtrl("Sessions", "New").
	Register()

var SessionCreate = usersGroup.Route("user_session").
	SetPath("/sign_in").
	SetMethod(http.MethodPost).
	SetCtrl("Sessions", "Create").
	Register()

var SessionDestroy = usersGroup.Route("destroy_user_session").
	SetPath("/sign_out").
	SetMethod(http.MethodPost).
	SetCtrl("Sessions", "Destroy").
	Register()

var PasswordNew = usersGroup.Route("new_user_password").
	SetPath("/password/new").
	SetMethod(http.MethodGet).
	SetCtrl("ResetPassword", "New").
	Register()

var PasswordCreate = usersGroup.Route("user_password").
	SetPath("/password").
	SetMethod(http.MethodPost).
	SetCtrl("ResetPassword", "Create").
	Register()

var PasswordEdit = usersGroup.Route("edit_user_password").
	SetPath("/password/:token/edit").
	SetMethod(http.MethodGet).
	SetCtrl("ResetPassword", "Edit").
	RegisterWithToken()

var PasswordUpdate = usersGroup.Route("user_password_update").
	SetPath("/password").
	SetMethod(http.MethodPut).
	SetCtrl("ResetPassword", "Update").
	Register()

var RegistrationNew = usersGroup.Route("new_user_registration").
	SetPath("/sign_up").
	SetMethod(http.MethodGet).
	SetCtrl("Registrations", "New").
	Register()

var RegistrationCreate = usersGroup.Route("user_registration").
	SetPath("").
	SetMethod(http.MethodPost).
	SetCtrl("Registrations", "Create").
	Register()

var ConfirmationNew = usersGroup.Route("new_user_confirmation").
	SetPath("/confirmation/new").
	SetMethod(http.MethodGet).
	SetCtrl("Confirmations", "New").
	Register()

var ConfirmationCreate = usersGroup.Route("user_confirmation").
	SetPath("/confirmation").
	SetMethod(http.MethodPost).
	SetCtrl("Confirmations", "Create").
	Register()
